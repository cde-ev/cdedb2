root = true

[*]
indent_style = space
indent_size = 4
# Better to let the VCS handle native endings
# end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
max_line_length = 88

[*.tmpl]
max_line_length = 120

[.drone.yml]
indent_size = 2

[Makefile]
indent_style = tab
