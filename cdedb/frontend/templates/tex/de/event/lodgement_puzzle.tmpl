<<% extends "tex/de/event/base_article.tmpl" %>>
<<% block extra_preamble %>>
    \parindent 0pt\relax
    \newcommand\lodgement[5]{
        \section*{#1 (#2)}
        Kapazit√§t: #3
        \par
        Reserve: #4
        \par
        Notizen: #5
        \par
        \vspace{.5cm}
        \hrule
        }
    \newcommand\participant[6]{
        \section*{#1 (#2)}
        #3 #4 #5~\par
        #6
        \vspace{.5cm}
        \hrule}
<<% endblock %>>
<<% block content %>>
    <<% for lodgement_id, lodgement in lodgements|dictsort %>>
        <<% for part_id, part in ambience['event']['parts']|dictsort %>>
            \lodgement{<<< lodgement['moniker']|te >>>}{<<< part['title']|te >>>}{<<< lodgement['capacity']|te >>>}%
                      {<<< lodgement['reserve']|te >>>}{<<< lodgement['notes']|te >>>}
        <<% endfor %>>
    <<% endfor %>>
    \clearpage
    <<% for registration_id, registration in registrations|dictsort %>>
        <<% for part_id, part in ambience['event']['parts']|dictsort %>>
            <<% if enums['RegistrationPartStati'](registration['parts'][part_id]['status']).is_present() %>>
                \participant{<<< personas[registration['persona_id']]['given_names']|te >>>
                             <<< personas[registration['persona_id']]['family_name']|te >>>}%
                    {<<< part['title']|te >>>%
                     <<% if registration['parts'][part_id]['status'] == enums['RegistrationPartStati'].guest -%>>
                        ~[Gast]
                     <<%- endif %>>; <<< personas[registration['persona_id']]['birthday'].year|te >>>}%
                    {<<% if not registration['mixed_lodging'] %>>getrennt<<% endif %>>}%
                    {<<% if registration['age'] == enums['AgeClasses'].u16 %>>U18<<% endif -%>>
                     <<% if registration['age'] == enums['AgeClasses'].u16 %>>U16<<% endif -%>>
                     <<% if registration['age'] == enums['AgeClasses'].u14 %>>U14<<% endif -%>>}%
                    {<<% if may_reserve_present and registration['fields'].get('may_reserve') -%>>
                        Reserveplatz
                     <<%- endif %>>}%
                    {<<% if lodge_present and registration['fields'].get('lodge') -%>>
                        Wunsch: <<< registration['fields'].get('lodge')|te >>>\par
                     <<% endif -%>>}
            <<% endif %>>
        <<% endfor %>>
    <<% endfor %>>
<<% endblock %>>
