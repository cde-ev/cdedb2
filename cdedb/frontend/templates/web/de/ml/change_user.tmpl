{% extends "web/de/ml/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}{{ values['given_names']|e }} {{ values['family_name']|e }} bearbeiten{% endblock %}
{% block content %}
    <form action="{{ cdedblink('ml/change_user')|e }}" method="POST" id="changedataform">
        <table>
            {{ util.tab_input_text(name="given_names", label="Vorname(n)") }}
            {{ util.tab_input_text(name="family_name", label="Nachname") }}
            {{ util.tab_input_text(name="display_name", label="Rufname") }}
        </table>
        <div>
            {{ util.input_submit(value="Speichern") }}
            <a href="{{ show_user_link(user.persona_id)|e }}">Abbrechen</a>
        </div>
    </form>
{% endblock %}
