{% set sidenav_active='ml_index' %}
{% extends "web/de/ml/base.tmpl" %}
{% block title %}Mailinglisten{% endblock %}
{% block breadcrumb %}
{{ util.breadcrumb_link(cdedblink("ml/index"), "Mailinglisten", active=True) }}
{% endblock %}
{% macro format_entry(mailinglist_id, title) %}
    <li>
        {{ util.deko_checkbox(mailinglist_id in subscriptions, titles=['nicht abonniert','abonniert']) }}
        {{ util.href(cdedblink("ml/show_mailinglist", {'mailinglist_id': mailinglist_id}), title) }}
        {% if not mailinglist_infos[mailinglist_id]['is_active'] %}
            (inaktiv)
        {% endif %}
    </li>
{% endmacro %}
{% block content %}
    <div class="p">
        {{ util.href(cdedblink("ml/create_mailinglist_form"), "Mailingliste anlegen", icon="plus",
                aclass="btn btn-sm btn-success") }}
    </div>
    <p>
        Hier findest Du die Mailinglisten des CdE; insbesondere auch zu
        Akademien und Mitgliederversammlungen.
    </p>

    <h3>Allgemeine Listen</h3>
    <ul class="styleless">
        {% for mailinglist_id, title in mailinglists|dictsort %}
            {% if (not mailinglist_infos[mailinglist_id]['event_id']
                   and not mailinglist_infos[mailinglist_id]['assembly_id']) %}
                {{ format_entry(mailinglist_id, title) }}
            {% endif %}
        {% endfor %}
    </ul>
    {% if 'event' in user.roles %}
    <h3>Veranstaltungslisten</h3>
    <ul class="styleless">
        {% for mailinglist_id, title in mailinglists|dictsort %}
            {% if mailinglist_infos[mailinglist_id]['event_id'] %}
                {{ format_entry(mailinglist_id, title) }}
            {% endif %}
        {% endfor %}
    </ul>
    {% endif %}
    {% if 'assembly' in user.roles %}
    <h3>Versammlungslisten</h3>
    <ul class="styleless">
        {% for mailinglist_id, title in mailinglists|dictsort %}
            {% if mailinglist_infos[mailinglist_id]['assembly_id'] %}
                {{ format_entry(mailinglist_id, title) }}
            {% endif %}
        {% endfor %}
    </ul>
    {% endif %}
{% endblock %}
