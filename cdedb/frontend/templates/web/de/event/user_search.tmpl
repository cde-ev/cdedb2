{% set sidenav_active='event_users' %}
{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% import "web/de/generic.tmpl" as generic with context %}
{% block javascripthint %}{{ util.javascript_hint() }}{% endblock %}
{% block scripts %}{{ util.cdedb_script('queryform') }}{% endblock %}
{% block title %}Veranstaltungsnutzersuche{% endblock %}
{% block content %}
    <h3>Standardabfragen</h3>
    {% with TITLES = {
        "minors": "Minderjährige",} %}

        <div>
            {{ util.place_default_queries("event/user_search", default_queries, TITLES) }}
        </div>
    {% endwith %}

    {{ generic.user_search_mask("event", ("pevent_id", "pcourse_id")) }}

    {% if values['is_search'] %}
        <h3>Ergebnis -- {{ result|length|e }} {{ result|length|numerus("Eintrag", "Einträge")|e }} gefunden</h3>
        {{ generic.user_search_result(result, "event") }}
    {% endif %}
{% endblock %}
