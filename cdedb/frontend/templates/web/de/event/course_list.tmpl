{% block content %}
    {% if course_data %}
        <h2>Kurse</h2>
        <ul>
            {% for anid, entry in course_data|dictsort %}
                <li>
                    {{ util.href(cdedblink('event/show_course', {'course_id' : anid}),
                                 "{} -- {}".format(entry['nr'], entry['title'])) }}
                    {% if event_data['id'] in user.orga or is_admin %}
                        {{ util.href(cdedblink('event/change_course_form', {'course_id' : anid}), "Bearbeiten",
                                     readonly=True) }}
                    {% endif %}
                    <p>Kursleiter: {{ entry['instructors']|e }}</p>
                    <p>{{ entry['description']|e }}</p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Diese Veranstaltung hat keine Kurse.</p>
    {% endif %}
