{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}{{ ambience['course']['title']|e }} ({{ ambience['event']['title']|e }}) bearbeiten{% endblock %}
{% block content %}
    {{ util.href(cdedblink("event/show_course"), "Abbrechen") }}
    <form action="{{ cdedblink('event/change_course')|e }}" method="POST" id="changecourseform">
        <table>
            {{ util.form_input_text(name="title", label="Titel") }}
            {{ util.form_input_textarea(name="description", label="Beschreibung", rows="5") }}
            {{ util.form_input_text(name="nr", label="Nummer") }}
            {{ util.form_input_text(name="shortname", label="Kürzel") }}
            {{ util.form_input_text(name="instructors", label="Kursleiter") }}
            {{ util.form_input_text(name="min_size", label="Minimalgröße") }}
            {{ util.form_input_text(name="max_size", label="Maximalgröße") }}
            {{ util.form_input_textarea(name="notes", label="Notizen", rows="5") }}
            {# jinja does not support list comprehension ... #}
            {% set myentries = [] %}
            {% for part_id, part in ambience['event']['parts']|dictsort %}
                {{ myentries.append((part_id, part['title']))|e }}
            {% endfor %}
            {{ util.form_input_checkboxes(name="parts", label="Veranstaltungsteile", entries=myentries) }}
            {{ util.form_input_checkboxes(name="active_parts", label="Veranstaltungsteile", entries=myentries) }}
        </table>
        <div>
            {{ util.form_input_submit(value="Speichern") }}
        </div>
    </form>
{% endblock %}
