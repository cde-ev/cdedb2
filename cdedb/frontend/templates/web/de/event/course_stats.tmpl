                {% for part_id, pdata in event_data['parts']|dictsort %}
                     {% for i in range(3) %}
                         <td> {{ counts[course_id][(part_id, i)]|e }} </td>
                     {% endfor %}
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
