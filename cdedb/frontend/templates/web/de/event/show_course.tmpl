{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}{{ course_data['title']|e }} ({{ event_data['title']|e }}){% endblock %}
{% block content %}
    {% if event_data['id'] in user.orga or is_admin %}
        {{ util.href(cdedblink('event/change_course_form'), "Bearbeiten", disabled=locked) }}
        {{ util.href(cdedblink('event/manage_attendees_form'), "Kursteilnehmer verwalten", disabled=locked) }}
    {% endif %}
    <p>Kursleiter: {{ course_data['instructors']|e }}</p>
    <p>{{ course_data['description']|e }}</p>
    {% if event_data['id'] in user.orga or is_admin %}
        <h2>Teilnehmer</h2>
        {% for part_id in course_data['parts']|sort %}
            <h3>{{ event_data['parts'][part_id]['title']|e }}</h3>
            <ul>
                {% for registration_id in attendees[(course_data['id'], part_id)] %}
                    <li>
                        {{ persona_data[registration_data[registration_id]['persona_id']]['given_names']|e }}
                        {{ persona_data[registration_data[registration_id]['persona_id']]['family_name']|e }}
                    </li>
                {% endfor %}
            </ul>
        {% endfor %}
    {% endif %}
{% endblock %}
