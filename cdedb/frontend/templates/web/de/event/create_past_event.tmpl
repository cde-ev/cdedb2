{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}Veranstaltung anlegen{% endblock %}
{% block content %}
    <form action="{{ cdedblink('event/create_past_event')|e }}" method="POST" id="createeventform">
        <table>
            {{ util.input_text(name="title", label="Titel") }}
            {{ util.input_text(name="organizer", label="Organisator") }}
            {{ util.input_textarea(name="description", label="Beschreibung", aclass="biggg") }}
            {{ util.input_text(name="tempus", label="Stichtag") }}
        </table>
        <div>
            {{ util.input_submit(value="Anlegen") }}
        </div>
    </form>
{% endblock %}
