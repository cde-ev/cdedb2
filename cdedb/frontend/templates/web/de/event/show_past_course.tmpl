{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}{{ course_data['title']|e }} ({{ event_data['title']|e }}){% endblock %}
{% block content %}
    {% if is_admin %}
        <a href="{{ cdedblink('event/change_past_course_form')|e }}">Bearbeiten</a>
        <form action="{{ cdedblink('event/add_participant')|e }}" method="POST" id="addparticipantform">
            {{ util.input_hidden(name="course_id", value=values['course_id']) }}
            {{ util.input_text(name="persona_id", label="ID") }}
            {{ util.input_checkbox(name="is_instructor", label="Kursleiter") }}
            {{ util.input_checkbox(name="is_orga", label="Orga") }}
            {{ util.input_submit(value="Teilnehmer hinzufügen") }}
        </form>
        <form action="{{ cdedblink('event/delete_past_course')|e }}" method="POST" id="deletecourseform">
            {{ util.input_submit(value="Gesamten Kurs löschen") }}
        </form>
    {% endif %}
    <p>{{ course_data['description']|e }}</p>
    {% if participants %}
        <h2>Teilnehmer</h2>
        <ul>
            {% for anid, pdata in participants|dictsort %}
                <li>
                    {% if pdata['is_instructor'] %}
                        <strong>
                    {% endif %}
                    {{ participant_data[anid]['given_names']|e }} {{ participant_data[anid]['family_name']|e }}
                    {% if is_admin %}
                        <form action="{{ cdedblink('event/remove_participant')|e }}" method="POST"
                         id="removeparticipantform{{ anid|e }}">
                            {{ util.input_hidden(name="persona_id", value=anid) }}
                            {{ util.input_hidden(name="course_id", value=values['course_id']) }}
                            {{ util.input_hidden(name="course_page", value=True) }}
                            {{ util.input_submit(value="entfernen") }}
                        </form>
                    {% endif %}
                    {% if pdata['is_instructor'] %}
                        </strong>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
