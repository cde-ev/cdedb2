{% set sidenav_active='event_show' %}
{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}DB-Kurs hinzufügen ({{ data['title']|e }}){% endblock %}
{% block content %}
    {{ util.href(cdedblink("event/show_event"), "Abbrechen") }}
    <form action="{{ cdedblink('event/create_course')|e }}" method="POST" id="createcourseform">
        <table>
            {{ util.input_text(name="title", label="Titel") }}
            {{ util.input_textarea(name="description", label="Beschreibung", aclass="biggg") }}
            {{ util.input_text(name="nr", label="Nummer") }}
            {{ util.input_text(name="shortname", label="Kürzel") }}
            {{ util.input_text(name="instructors", label="Kursleiter") }}
            {{ util.input_textarea(name="notes", label="Notizen", aclass="biggg") }}
            {# jinja does not support list comprehension ... #}
            {% set myentries = [] %}
            {% for part_id, pdata in data['parts']|dictsort %}
                {{ myentries.append((part_id, pdata['title'], "manipulator_checkbox_{}".format(part_id)))|e }}
            {% endfor %}
            {{ util.input_checkboxes(name="parts", title="Veranstaltungsteile", entries=myentries) }}
        </table>
        <div>
            {{ util.input_submit(value="Kurs hinzufügen") }}
        </div>
    </form>
{% endblock %}
