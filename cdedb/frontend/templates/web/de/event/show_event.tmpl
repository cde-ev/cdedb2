{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}{{ event_data['title']|e }}{% endblock %}
{% block content %}
    {% if event_data['id'] in user.orga or is_admin %}
        <a href="{{ cdedblink('event/event_config')|e }}">Konfiguration</a>
        <a href="{{ cdedblink('event/create_course_form')|e }}" {% if locked %} disabled {% endif %}>Kurs hinzuf√ºgen</a>
    {% endif %}
    <p>{{ event_data['description']|e }}</p>
    {% if event_data['is_open'] %}
        <a href="{{ cdedblink("event/register")|e }}" {% if locked %} disabled {% endif %}>Zur Anmeldung</a>
    {% endif %}
    {% if course_data %}
        <h2>Kurse</h2>
        <ul>
            {% for anid, entry in course_data|dictsort %}
                <li>
                    <a href="{{ cdedblink('event/show_course', {'course_id' : anid})|e }}">
                        {{ entry['nr']|e }} -- {{ entry['title']|e }}
                    </a>
                    {% if event_data['id'] in user.orga or is_admin %}
                        <a href="{{ cdedblink('event/change_course_form', {'course_id' : anid})|e }}"
                         {% if locked %} disabled {% endif %}>
                            Bearbeiten
                        </a>
                    {% endif %}
                    <p>Kursleiter: {{ entry['instructors']|e }}</p>
                    <p>{{ entry['description']|e }}</p>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if event_data['is_open'] %}
        <a href="{{ cdedblink("event/register")|e }}" {% if locked %} disabled {% endif %}>Zur Anmeldung</a>
    {% endif %}
{% endblock %}
