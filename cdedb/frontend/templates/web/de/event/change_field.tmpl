{% set sidenav_active='event_config' %}
{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}
Datenfeld {{ data['fields'][values['field_id']]['field_name']|e }} ({{ data['title']|e }}) bearbeiten
{% endblock %}
{% block content %}
    {{ util.href(cdedblink("event/change_event"), "Abbrechen") }}
    <form action="{{ cdedblink('event/change_field')|e }}" method="POST" id="changefieldform">
        <table>
            {{ util.form_input_text(name="field_name", label="Name", readonly=True) }}
            {{ util.form_input_select(name="kind", label="Typ", entries=(
                ("str", "String"), ("bool", "Ja/Nein"), ("int", "Zahl"), ("float", "Kommazahl"),
                ("date", "Datum"), ("datetime", "Datum mit Uhrzeit"))) }}
            {{ util.form_input_textarea(name="entries", label="Auswahlm√∂glichkeiten",
                                       info="Format ist 'Wert;langer Beschreibungstext' pro Zeile.") }}
        </table>
        <div>
            {{ util.form_input_submit(value="Speichern") }}
        </div>
    </form>
{% endblock %}
