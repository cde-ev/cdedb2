{% set sidenav_active='event_lodgement' %}
{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}
    Unterkunft {{ ambience['lodgement']['moniker'] }} bearbeiten ({{ ambience['event']['title']|e }})
{% endblock %}
{% block content %}
    {{ util.href(cdedblink("event/show_lodgement"), "Abbrechen") }}
    <form action="{{ cdedblink('event/change_lodgement')|e }}" method="POST" id="changelodgementform">
        <table>
            {{ util.form_input_text(name="moniker", label="Bezeichnung") }}
            {{ util.form_input_text(name="capacity", label="normale Plätze") }}
            {{ util.form_input_text(name="reserve", label="Reserveplätze") }}
            {{ util.form_input_textarea(name="notes", label="Notizen", rows="5") }}
            <h4 class="heading-underline">Felder</h4>
            {% for field_id, field in ambience['event']['fields']|dictsort %}
                {% if field['association'] == enums['FieldAssociations'].lodgement %}
                    {{ util.form_event_field_input(field) }}
                {% endif %}
            {% endfor %}
        </table>
        <div>
            {{ util.form_input_submit(value="Speichern") }}
        </div>
    </form>
{% endblock %}
