{% set sidenav_active='event_downloads' %}
{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}Downloads zur Veranstaltung {{ event_data['title']|e }}{% endblock %}
