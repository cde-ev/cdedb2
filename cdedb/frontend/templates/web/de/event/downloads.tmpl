                {{ util.input_submit(value="PDF") }}
            </form>
            <form action="{{ cdedblink('event/download_course_puzzle')|e }}" method="GET" id="coursepuzzletexform">
                {{ util.input_hidden(name="runs", value=0) }}
                {{ util.input_submit(value="TeX") }}
            </form>
        </li>
        <li>
            Bastelsatz Unterkunftseinteilung
