        <li>
            Teilnehmerliste
            <form action="{{ cdedblink('event/download_participant_list')|e }}" method="GET"
             id="participantlistpdfform">
                {{ util.input_hidden(name="runs", value=2) }}
                {{ util.input_submit(value="PDF") }}
            </form>
            <form action="{{ cdedblink('event/download_participant_list')|e }}" method="GET"
             id="participantlisttexform">
                {{ util.input_hidden(name="runs", value=0) }}
