        <li>
            Namensschilder
            <form action="{{ cdedblink('event/download_nametags')|e }}" method="GET" id="nametagpdfform">
                {{ util.input_hidden(name="runs", value=2) }}
                {{ util.input_submit(value="PDF") }}
            </form>
            <form action="{{ cdedblink('event/download_nametags')|e }}" method="GET" id="nametagtexform">
                {{ util.input_hidden(name="runs", value=0) }}
