{% set sidenav_active='event_config' %}
{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}
Feld {{ ambience['event']['fields'][values['field_id']|int]['field_name']|e }} setzen ({{ ambience['event']['title']|e }})
{% endblock %}
{% block content %}
    {{ util.href(cdedblink("event/show_event"), "Abbrechen") }}
    <form action="{{ cdedblink('event/field_set')|e }}" method="POST" id="fieldform">
        <table>
            {% for registration_id in ordered %}
                {{ util.tab_event_field_input(
                    ambience['event']['fields'][values['field_id']|int], name="input{}".format(registration_id),
                    label="{} {}".format(
                        personas[registrations[registration_id]['persona_id']]['given_names'],
                        personas[registrations[registration_id]['persona_id']]['family_name'])) }}
            {% endfor %}
        </table>
        <div>
            {{ util.input_hidden(name="field_id") }}
            {{ util.form_input_submit(value="Speichern") }}
        </div>
    </form>
{% endblock %}
