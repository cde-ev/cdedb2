{% set sidenav_active='event_config' %}
{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}{{ data['title']|e }} bearbeiten{% endblock %}
{% block content %}
    <form action="{{ cdedblink('event/change_event')|e }}" method="POST" id="changeeventform">
        <table>
            {{ util.form_input_text(name="title", label="Titel") }}
            {# jinja does not support list comprehension ... #}
            {% set myentries = [] %}
            {% for value, title in institutions|dictsort %}
                {{ myentries.append((value, title))|e }}
            {% endfor %}
            {{ util.form_input_select(name="institution", label="Organisation", entries=myentries) }}
            {{ util.form_input_textarea(name="description", label="Beschreibung", rows="5") }}
            {{ util.form_input_text(name="shortname", label="Kürzel") }}
            {{ util.form_input_text(name="registration_start", label="Anmeldebeginn") }}
            {{ util.form_input_text(name="registration_soft_limit", label="offizieller Anmeldeschluss") }}
            {{ util.form_input_text(name="registration_hard_limit", label="tatsächlicher Anmeldeschluss") }}
            {{ util.form_input_select(name="iban", label="CdE-Konto IBAN", entries=(
                ("DE96 3702 0500 0008 0689 01", "DE96 3702 0500 0008 0689 01"),
                ("DE96 3702 0500 0008 0689 02", "DE96 3702 0500 0008 0689 02")), nulloption=True) }}
            {{ util.form_input_checkbox(name="use_questionnaire", label="Fragebogen benutzen") }}
            {{ util.form_input_textarea(name="notes", label="Notizen", rows="5") }}
        </table>
        <div>
            {{ util.form_input_submit(value="Speichern") }}
        </div>
    </form>
{% endblock %}
