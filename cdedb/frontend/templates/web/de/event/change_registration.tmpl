{% extends "web/de/event/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block navigation %}{{ event_navigation(unfold=True) }}{% endblock %}
{% block title %}
Anmeldung von {{ user_data['given_names']|e }} {{ user_data['family_name']|e }} bearbeiten ({{ event_data['title']|e }})
{% endblock %}
{% block content %}
    <a href="{{ cdedblink("event/show_registration")|e }}">Abbrechen</a>
    <form action="{{ cdedblink('event/change_registration')|e }}" method="POST" id="changeregistrationform">
        <table>
            <tr><th colspan="2">Allgemeine Angaben</th></tr>
            {{ util.tab_input_text(name="reg.real_persona_id", label="Online CdEDB-ID") }}
            {{ util.tab_input_textarea(name="reg.notes", label="Anmerkungen", aclass="biggg") }}
            {{ util.tab_input_textarea(name="reg.orga_notes", label="Orga-Notizen", aclass="biggg") }}
            {{ util.tab_input_text(name="reg.payment", label="Teilnehmerbeitrag bezahlt am") }}
            {{ util.tab_input_checkbox(name="reg.parental_agreement", label="Einverständniserklärung der Eltern") }}
            {{ util.tab_input_checkbox(name="reg.mixed_lodging", label="Gemischte Unterbringung") }}
            {{ util.tab_input_text(name="reg.checkin", label="Checkin") }}
            {{ util.tab_input_checkbox(name="reg.foto_consent", label="Foto-Einwilligung") }}
            {% for part_id, pdata in event_data['parts']|dictsort %}
                <tr><th colspan="2">{{ pdata['title']|e }}</th></tr>
                {# jinja does not support list comprehension ... #}
                {% set myentries = [] %}
                {% for s in const.RegistrationPartStati %}
                    {{ myentries.append((s.value, i18n(s|string), None))|e }}
                {% endfor %}
                {{ util.tab_input_select(name="part{}.status".format(part_id), title="Status", entries=myentries) }}
                {# jinja does not support list comprehension ... #}
                {% set myentries = [] %}
                {% for course_id in course_choices[part_id] %}
                    {{ myentries.append((course_id, course_data[course_id]['title'], None))|e }}
                {% endfor %}
                {{ util.tab_input_select(name="part{}.course_id".format(part_id), title="Kurs", entries=myentries,
                                         nulloption=True) }}
                {{ util.tab_input_select(name="part{}.course_choice_0".format(part_id), title="Erstwahl",
                                         entries=myentries, nulloption=True) }}
                {{ util.tab_input_select(name="part{}.course_choice_1".format(part_id), title="Zweitwahl",
                                         entries=myentries, nulloption=True) }}
                {{ util.tab_input_select(name="part{}.course_choice_2".format(part_id), title="Drittwahl",
                                         entries=myentries, nulloption=True) }}
                {{ util.tab_input_select(name="part{}.course_instructor".format(part_id), title="Kursleiter",
                                         entries=myentries, nulloption=True) }}
                {# jinja does not support list comprehension ... #}
                {% set myentries = [] %}
                {% for lodgement_id, ldata in lodgement_data|dictsort %}
                    {{ myentries.append((lodgement_id, ldata['moniker'], None))|e }}
                {% endfor %}
                {{ util.tab_input_select(name="part{}.lodgement_id".format(part_id), title="Unterkunft",
                                         entries=myentries, nulloption=True) }}
            {% endfor %}
            <tr><th colspan="2">Felder</th></tr>
            {% for field_id, fdata in event_data['fields']|dictsort %}
               {{ util.tab_event_field_input(fdata) }}
            {% endfor %}
        </table>
        <div>
            {{ util.input_submit(value="Speichern") }}
        </div>
    </form>
{% endblock %}
