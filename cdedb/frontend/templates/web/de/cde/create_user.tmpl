{% extends "web/de/cde/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}Neues Mitglied anlegen{% endblock %}
{% block content %}
    <form action="{{ cdedblink('cde/create_user')|e }}" method="POST" id="newuserform">
        <table>
            <tr> <th colspan="2">Person</th> </tr>
            {{ util.input_text(name="title", label="Titel") }}
            {{ util.input_text(name="given_names", label="Vorname(n)") }}
            {{ util.input_text(name="family_name", label="Nachname") }}
            {{ util.input_text(name="birth_name", label="Geburtsname") }}
            {{ util.input_text(name="name_supplement", label="Namenszusatz") }}
            {{ util.input_text(name="display_name", label="Rufname") }}
            {{ util.input_textarea(name="specialisation", label="Fachgebiet", aclass="bigg") }}
            {{ util.input_textarea(name="affiliation", label="Schule, Uni, ...", aclass="bigg") }}
            {{ util.input_textarea(name="timeline", label="Jahrgang, Matrikel, ...", aclass="bigg") }}
            {{ util.input_textarea(name="interests", label="Interessen", aclass="bigg") }}
            {{ util.input_textarea(name="free_form", label="Sonstiges", aclass="biggg") }}
            {{ util.input_select(name="gender", entries=default_selections['gender'], label="Geschlecht") }}
            {{ util.input_text(name="birthday", label="Geburtstag") }}
            <tr> <th colspan="2">Kontakt</th> </tr>
            {{ util.input_text(name="username", label="Email") }}
            {{ util.input_text(name="telephone", label="Telefon") }}
            {{ util.input_text(name="mobile", label="Mobiltelefon") }}
            {{ util.input_text(name="weblink", label="WWW") }}
            <tr> <th colspan="2">Adresse</th> </tr>
            {{ util.input_text(name="address", label="Straße") }}
            {{ util.input_text(name="address_supplement", label="Addresszusatz") }}
            {{ util.input_text(name="postal_code", label="Postleitzahl") }}
            {{ util.input_text(name="location", label="Stadt") }}
            {{ util.input_text(name="country", label="Land") }}
            <tr> <th colspan="2">Zweitadresse</th> </tr>
            {{ util.input_text(name="address2", label="Straße") }}
            {{ util.input_text(name="address_supplement2", label="Addresszusatz") }}
            {{ util.input_text(name="postal_code2", label="Postleitzahl") }}
            {{ util.input_text(name="location2", label="Stadt") }}
            {{ util.input_text(name="country2", label="Land") }}
            <tr> <th colspan="2">Account</th> </tr>
            {{ util.input_checkbox(name="is_member", label="Mitgliedschaft",
                                   anid="input_checkbox_is_member") }}
            {{ util.input_checkbox(name="is_searchable", label="Sichtbarkeit (falls Einwilligung vorhanden)",
                                   anid="input_checkbox_is_searchable") }}
            {{ util.input_checkbox(name="trial_member", label="Probemitgliedschaft",
                                       anid="input_checkbox_trial_member") }}
            {{ util.input_checkbox(name="bub_search", label="Zugriff für BuB", anid="input_checkbox_bub_search") }}
            {{ util.input_checkbox(name="cloud_account", label="Cloud Account",
                                       anid="input_checkbox_cloud_account") }}
            {{ util.input_textarea(name="notes", label="Notizen", aclass="bigggg") }}
        </table>
        <div>
            {{ util.input_submit(value="Mitglied anlegen") }}
            {{ util.href(cdedblink("cde/index"), "Abbrechen") }}
        </div>
    </form>
{% endblock %}
