{% import "web/de/util.tmpl" as util with context %}
{% block title %}Alle Organisationen{% endblock %}
{% block content %}
    <ul>
        {% for institution_id, title in institutions|dictsort|reverse %}
            <li>
                {{ title|e }}
                {{ util.href(cdedblink("cde/change_institution", {"institution_id": institution_id}), "Bearbeiten") }}
            </li>
        {% endfor %}
    </ul>
    <h2>Neue Organisation anlegen</h2>
    <form action="{{ cdedblink('cde/create_institution')|e }}" method="POST" id="createinstitutionform">
        <table>
            {{ util.form_input_text(name="title", label="Titel") }}
            {{ util.form_input_text(name="moniker", label="KÃ¼rzel") }}
        </table>
        <div>
            {{ util.form_input_submit(value="Anlegen") }}
        </div>
    </form>
{% endblock %}
