{% set sidenav_active='cde_past_events' %}
{% extends "web/de/cde/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block scripts %}{{ util.cdedb_script('search-persona') }}{% endblock %}
{% block title %}{{ ambience['pevent']['title']|e }}{% endblock %}
{% block heading %}
    <h1 class="title">{{ ambience['pevent']['title']|e }} <small>({{ ambience['pevent']['shortname']|e }})</small></h1>
{% endblock %}
{% block breadcrumb %}
{{ util.breadcrumb_link(cdedblink("cde/index"), "CdE") }}
{{ util.breadcrumb_link(cdedblink("cde/list_past_events"), "Abg. Veranstaltungen") }}
{{ util.breadcrumb_link(cdedblink("cde/show_past_event", {"pevent_id": ambience['pevent']['id']}),
        ambience['pevent']['title']|e, icon="calendar", active=True) }}
{% endblock %}
{% block content %}
    {% if is_admin %}
        <div class="p">
        {{ util.href(cdedblink('cde/change_past_event_form'), "Bearbeiten", icon="pencil",
                aclass="btn btn-warning btn-sm") }}
        </div>
    {% endif %}
    <p><strong>Organisation</strong>: {{ institutions[ambience['pevent']['institution']]|e }}</p>
    {{ ambience['pevent']['description']|rst }}

    <h2>Kurse</h2>
    {% if is_admin %}
        <div class="p">
            {{ util.href(cdedblink('cde/create_past_course_form'), "Kurs hinzufügen", icon="plus",
                    aclass="btn btn-success btn-sm") }}
        </div>
    {% endif %}
    {% if courses %}
        <ul>
            {% for anid, title in courses|dictsort %}
                <li>{{ util.href(cdedblink('cde/show_past_course', {'pcourse_id' : anid}), title) }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h2>Teilnehmer</h2>
    {% if is_admin %}
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="panel-title">Teilnehmer <u>ohne Kurs</u> hinzufügen</h4>
            </div>
            <div class="panel-body">
                <form action="{{ cdedblink('cde/add_participant')|e }}" method="POST" id="addparticipantform">
                    {{ util.input_hidden(name="pcourse_id", value="") }}
                    {{ util.input_hidden(name="is_instructor", value=False) }}
                    <div class="row">
                        <div class="col-sm-7">
                            {{ util.input_text(name="persona_id", placeholder="DB-XXXX-X",
                                    anid="input-add-participant") }}
                            <script type="text/javascript">
                                $('#input-add-participant').cdedbSearchPerson('cde_user',{{ participants.keys()|list|json }});
                            </script>
                        </div>
                        <div class="col-sm-2">
                            <div class="checkbox">
                                {{ util.input_checkbox(name="is_orga", label="Orga") }}
                            </div>
                        </div>
                        <div class="col-sm-3">
                            {{ util.input_submit(value="hinzufügen", icon="plus") }}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    {% endif %}
    {% if participants %}
        <ul>
            {% for anid, participant in participants.items() %} {# This dict is already sorted. #}
                <li>

                    {% if participant['viewable'] %}
                        {{ util.persona_anchor(personas[anid]) }}
                    {% else %}
                        {{ participant['given_names']|e }} {{ participant['family_name']|e }}
                    {% endif %}
                    {% if participant['pcourse_ids'] != (None,) %}
                        (
                        {%- for pcourse_id in participant['pcourse_ids'] %}
                            {%- if pcourse_id -%}
                                {{ util.href(cdedblink('cde/show_past_course', {'pcourse_id' : pcourse_id}),
                                    courses[pcourse_id]) }}
                                {%- if not loop.last %}, {% endif -%}
                            {% endif -%}
                        {% endfor -%}
                        )
                    {% endif %}
                    {% if participant['is_orga'] %}(Orga){% endif %}

                    {# only allow removal of participants without a course #}
                    {% if is_admin and None in participant['pcourse_ids'] %}
                        <form action="{{ cdedblink('cde/remove_participant')|e }}" method="POST"
                         id="removeparticipantform{{ anid|e }}" style="display: inline;">
                            {{ util.input_hidden(name="persona_id", value=anid) }}
                            {{ util.input_hidden(name="course_page", value=False) }}
                            {{ util.input_submit(title='entfernen', icon="trash", aclass="btn btn-xs btn-danger",
                                    value="") }}
                        </form>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>
            <i>Keine Teilnehmer eingetragen.</i>
        </p>
    {% endif %}
{% endblock %}
