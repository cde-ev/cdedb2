{% set sidenav_active='cde_past_events' %}
{% extends "web/de/cde/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block scripts %}{{ util.cdedb_script('helper') }}{% endblock %}
{% block title %}{{ ambience['pevent']['title']|e }} bearbeiten{% endblock %}
{% block breadcrumb %}
{{ util.breadcrumb_link(cdedblink("cde/index"), "CdE") }}
{{ util.breadcrumb_link(cdedblink("cde/list_past_events"), "Abg. Veranstaltungen") }}
{{ util.breadcrumb_link(cdedblink("cde/show_past_event", {"pevent_id": ambience['pevent']['id']}),
        ambience['pevent']['title']|e, icon="calendar") }}
{{ util.breadcrumb_link(cdedblink("cde/change_past_event_form", {"pevent_id": ambience['pevent']['id']}), "Bearbeiten",
        active=True) }}
{% endblock %}
{% block content %}
    <script type="text/javascript">
        $(function() {
            $('#changeeventform').cdedbProtectChanges();
        });
    </script>
    <form action="{{ cdedblink('cde/change_past_event')|e }}" method="POST" id="changeeventform"
            class="form-horizontal">
        {{ util.form_input_text(name="title", label="Titel") }}
        {{ util.form_input_text(name="shortname", label="Kürzel") }}
        {# jinja does not support list comprehension ... #}
        {% set myentries = [] %}
        {% for value, title in institutions|dictsort %}
            {{ myentries.append((value, title))|e }}
        {% endfor %}
        {{ util.form_input_select(name="institution", label="Organisation", entries=myentries) }}
        {{ util.form_input_textarea(name="description", label="Beschreibung", rows="5") }}
        {{ util.form_input_text(name="tempus", label="Stichtag") }}
        {{ util.form_input_submit(value="Speichern", cancellink=cdedblink("cde/show_past_event")) }}
    </form>
{% endblock %}
