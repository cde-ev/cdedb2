{% set sidenav_active='cde_past_events_log' %}
{% extends "web/de/cde/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}
Log: Abgeschlossene Veranstaltungen [{{ values['start']|int|e }}â€“{{ (values['start']|int + log|length)|e }}]
{% endblock %}
{% block breadcrumb %}
{{ util.breadcrumb_link(cdedblink("cde/index"), "CdE") }}
{{ util.breadcrumb_link(cdedblink("cde/view_past_log"), "Log (abg. Veranstaltungen)", active=True) }}
{% endblock %}
{% block content %}
    <table>
        <tr>
            <th>Zeitstempel</th>
            <th>Code</th>
            <th>Verantwortlich</th>
            <th>Veranstaltung</th>
            <th>Betroffen</th>
            <th>Zusatz</th>
        </tr>
        {% for entry in log %}
            <tr>
                <td>{{ entry['ctime']|datetime|e }}</td>
                <td>{{ i18n(enums['PastEventLogCodes'](entry['code'])|string)|e }}</td>
                <td>
                    {% if entry['submitted_by'] %}
                        {{ personas[entry['submitted_by']]['given_names']|e }}
                        {{ personas[entry['submitted_by']]['family_name']|e }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {% if entry['pevent_id'] %}
                        {{ pevents[entry['pevent_id']]['title']|e }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {% if entry['persona_id'] %}
                        {{ personas[entry['persona_id']]['given_names']|e }}
                        {{ personas[entry['persona_id']]['family_name']|e }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>{{ entry['additional_info']|e }}</td>
            </tr>
        {% endfor %}
    </table>
    <form action="{{ cdedblink('cde/view_past_log')|e }}" method="GET" id="logshowform">
        <div>
            {# jinja does not support list comprehension ... #}
            {% set myentries = [] %}
            {% for code in enums['PastEventLogCodes'] %}
                {{ myentries.append((code.value, i18n(code|string)))|e }}
            {% endfor %}
            {{ util.form_input_checkboxes("codes", label="Kategorien", info="Keine Auswahl entspricht allem.",
                                     entries=myentries) }}
            {# jinja does not support list comprehension ... #}
            {% set myentries = [] %}
            {% for pevent_id, title in pevents|dictsort %}
                {{ myentries.append((pevent_id, title))|e }}
            {% endfor %}
            {{ util.form_input_select(name="pevent_id", label="Veranstaltung", nulloption=True, entries=myentries) }}
            {{ util.form_input_text(name="start", label="Anfang") }}
            {{ util.form_input_text(name="stop", label="Ende") }}
            {{ util.form_input_submit(value="Anzeigen") }}
        </div>
    </form>
{% endblock %}
