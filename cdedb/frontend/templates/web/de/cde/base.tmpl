{% set mainnav_active='cde' %}
{% extends "web/de/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block navigation %}
    <h2>Navigation</h2>
    <div class="list-group">
        {% if "searchable" in user.roles %}
            {{ util.href(cdedblink("cde/member_search"), "CdE-Mitglied suchen", aclass="list-group-item", icon="search",
                    active=(sidenav_active=='cde_member_search')) }}
        {% else %}
            {{ util.href(cdedblink("cde/consent_decision_form"), "Datenschutzerklärung", aclass="list-group-item",
                    icon="check", active=(sidenav_active=='cde_consent_decision')) }}
        {% endif %}
        {# TODO #}
        {{ util.href(cdedblink("cde/i25p_index"), "Initiative 25+") }}
    </div>
    {% if is_admin %}
        <div class="list-group">
            {{ util.href(cdedblink("cde/user_search"), "Nutzer verwalten", aclass="list-group-item", icon="user") }}
            {{ util.href(cdedblink("cde/lastschrift_index"), "Einzugsermächtigungen", aclass="list-group-item",
                    icon="euro", active=(sidenav_active=='cde_consent_form')) }}
            {# TODO #}
            {{ util.href(cdedblink("cde/show_semester"), "Semesterverwaltung") }}
            {{ util.href(cdedblink("cde/view_cde_log"), "Allgemeines Log", aclass="list-group-item", icon="list-alt") }}
        </div>
        <h4>abgeschlossene Veranstaltungen</h4>
        <div class="list-group">
            {{ util.href(cdedblink("cde/list_past_events"), "Abg. Veranstaltungen verwalten", icon="cog",
                    aclass="list-group-item") }}

            {# TODO #}
            {{ util.href(cdedblink("cde/create_past_event_form"), "abg. Veranstaltung anlegen") }}

            {{ util.href(cdedblink("cde/view_past_log"), "Log", icon="list-alt", aclass="list-group-item") }}
            {# TODO #}
            {{ util.href(cdedblink("cde/institution_summary"), "Organisationen verwalten") }}
        </div>
    {% endif %}
{% endblock %}
