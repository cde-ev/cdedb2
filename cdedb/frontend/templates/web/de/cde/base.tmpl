{% extends "web/de/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block navigation %}
    <ul>
        <li><a href="{{ cdedblink("core/index") }}">Start</a></li>
        <ul>
            <li><a href="{{ cdedblink("core/mydata")}}">Meine Daten</a></li>
            <li><a href="{{ cdedblink("core/change_password_form") }}">Passwort ändern</a></li>
            {% if is_admin %}
                <li>
                    <form action="{{ cdedblink('core/admin_show_user') }}" method="GET" id="adminshowuserform">
                        {{ util.input_text(name="id_to_show") }}
                        {{ util.input_submit(value="ID") }}
                    </form>
                </li>
            {% endif %}
        </ul>
        {% if user.realm == "cde" %}
            <li><a href="{{ cdedblink("cde/index") }}">CdE</a></li>
            <ul>
                <li><a href="{{ cdedblink("cde/member_search")}}">Mitgliedersuche</a></li>
                <li>Mitgliedschaft</li>
                {% if is_admin %}
                    <li><a href="{{ cdedblink("cde/list_pending_changes")}}">Änderungen begutachten</a></li>
                {% endif %}
            </ul>
        {% endif %}
        {% if user.realm in ("event", "cde") %}
            <li><a href="{{ cdedblink("event/index") }}">Veranstaltungen</a></li>
        {% endif %}
        <li>Mailinglisten</li>
        {% if user.realm in ("assembly", "cde") %}
            <li>Versammlung</li>
        {% endif %}
        <li>Dateien/li>
    </ul>
{% endblock %}
