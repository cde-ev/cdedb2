{% set mainnav_active='cde' %}
{% extends "web/de/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block navigation %}
    <h2 class="heading-responsive">Navigation</h2>
    <div class="list-group tear-down">
        {{ util.href(cdedblink("cde/index"), "Start", aclass="list-group-item",
                icon="triangle-right", active=(sidenav_active=='cde_index')) }}
        {% if "searchable" in user.roles %}
            {{ util.href(cdedblink("cde/member_search"), "CdE-Mitglied suchen", aclass="list-group-item", icon="search",
                    active=(sidenav_active=='cde_member_search')) }}
        {% else %}
            {{ util.href(cdedblink("cde/consent_decision_form"), "Datenschutzerklärung", aclass="list-group-item",
                    icon="check", active=(sidenav_active=='cde_consent_decision')) }}
        {% endif %}
    </div>
    {% if is_admin %}
        <div class="list-group tear-down">
            {{ util.href(cdedblink("cde/user_search"), "Nutzer verwalten", aclass="list-group-item", icon="user",
                    active=(sidenav_active=='cde_manage_users')) }}
            {{ util.href(cdedblink("cde/lastschrift_index"), "Einzugsermächtigungen", aclass="list-group-item",
                    icon="euro", active=(sidenav_active=='cde_lastschrift')) }}
            {{ util.href(cdedblink("cde/show_semester"), "Semesterverwaltung", aclass="list-group-item",
                    icon="hourglass", active=(sidenav_active=='cde_semester')) }}
            {{ util.href(cdedblink("cde/view_cde_log"), "CdE-Log", aclass="list-group-item", icon="list-alt",
                    active=(sidenav_active=='cde_log')) }}
            {{ util.href(cdedblink("cde/view_finance_log"), "Finanz-Log", aclass="list-group-item", icon="list-alt",
                    active=(sidenav_active=='finance_log')) }} {# FIXME styling #}
        </div>
        
        <div class="list-group tear-down">
            {{ util.href(cdedblink("cde/list_past_events"), "Abg. Veranstaltungen", icon="calendar",
                    aclass="list-group-item", active=(sidenav_active=='cde_past_events')) }}
            {{ util.href(cdedblink("cde/institution_summary"), "Organisationen verwalten", icon="briefcase",
                    aclass="list-group-item", active=(sidenav_active=='cde_past_events_org')) }}
            {{ util.href(cdedblink("cde/view_past_log"), "Log (abg. Veranstaltungen)", icon="list-alt",
                    aclass="list-group-item", active=(sidenav_active=='cde_past_events_log')) }}
        </div>
    {% endif %}
    <hr class="strong visible-xs visible-sm" />
{% endblock %}
