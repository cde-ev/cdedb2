{% extends "web/de/cde/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}{{ ambience['pcourse']['title']|e }} ({{ ambience['pevent']['title']|e }}) bearbeiten{% endblock %}
{% block content %}
    <form action="{{ cdedblink('cde/change_past_course')|e }}" method="POST" id="changecourseform">
        <table>
            {{ util.form_input_text(name="title", label="Titel") }}
            {{ util.form_input_textarea(name="description", label="Beschreibung", rows="5") }}
        </table>
        <div>
            {{ util.form_input_submit(value="Speichern") }}
            {{ util.href(cdedblink("cde/show_past_course"), "Abbrechen") }}
        </div>
    </form>
{% endblock %}
