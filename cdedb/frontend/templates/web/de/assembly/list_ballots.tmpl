{% extends "web/de/assembly/base.tmpl" %}
{% block jquery %}{{ util.jquery_with_ui_preamble() }}{% endblock %}
{% block javascripthint %}{{ util.javascript_hint() }}{% endblock %}
{% block inner_navigation %}{{assembly_inner_navigation(assembly_data)}}{% endblock %}
{% block title %}{{ assembly_data['title']|e }} -- Abstimmungen{% endblock %}
{% block content %}
    <ul>
        {% for anid, bdata in ballot_data|dictsort %}
            <li>
                {{ util.href(cdedblink("assembly/show_ballot", {'ballot_id': anid}), bdata['title'])}}
                {% if is_admin and now() < bdata['vote_begin'] %}
                    {{ util.href(cdedblink("assembly/change_ballot", {'ballot_id': anid}), "Bearbeiten")}}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
