{% set sidenav_active='assembly_config' %}
{% extends "web/de/assembly/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}{{ values['title']|e }} bearbeiten{% endblock %}
{% block content %}
    {{ util.href(cdedblink("assembly/show_assembly"), "Abbrechen") }}
    <form action="{{ cdedblink('assembly/change_assembly')|e }}" method="POST" id="changeassemblyform">
        <table>
            {{ util.form_input_text(name="title", label="Titel") }}
            {{ util.form_input_textarea(name="description", label="Beschreibung", rows="5") }}
            {{ util.form_input_text(name="signup_end", label="Anmeldeschluss") }}
            {{ util.form_input_textarea(name="notes", label="Notizen", rows="5") }}
        </table>
        <div>
            {{ util.form_input_submit(value="Speichern") }}
        </div>
    </form>
{% endblock %}
