{% set sidenav_active='assembly_log' %}
{% extends "web/de/assembly/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}
Versammlung – Logs ({{ values['start']|int|e }}–{{ (values['start']|int + log|length)|e }})
{% endblock %}
{% block content %}
    <table class="table table-condensed table-hover">
        <thead>
        <tr>
            <th>Zeitstempel</th>
            <th>Code</th>
            <th>Verantwortlich</th>
            <th>Versammlung</th>
            <th>Betroffen</th>
            <th>Zusatz</th>
        </tr>
        </thead>
        <tbody>
        {% for entry in log %}
            <tr>
                <td>{{ entry['ctime']|datetime|e }}</td>
                <td>{{ gettext(enums['AssemblyLogCodes'](entry['code'])|string)|e }}</td>
                <td>
                    {% if entry['submitted_by'] %}
                        {{ util.persona_anchor(personas[entry['submitted_by']]) }}
                    {% else %}
                        –
                    {% endif %}
                </td>
                <td>
                    {% if entry['assembly_id'] %}
                        {{ util.href(cdedblink('assembly/show_assembly', {'assembly_id': entry['assembly_id']}),
                                assemblies[entry['assembly_id']]['title']) }}
                    {% else %}
                        –
                    {% endif %}
                </td>
                <td>
                    {% if entry['persona_id'] %}
                        {{ util.persona_anchor(personas[entry['persona_id']]) }}
                    {% else %}
                        –
                    {% endif %}
                </td>
                <td>{{ entry['additional_info']|e }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% call util.bootstrap_panel(title="Filter", icon="search", aclass="panel-primary") %}
    <form action="{{ cdedblink('assembly/view_log')|e }}" method="GET" id="logshowform" class="form-horizontal">
        {# jinja does not support list comprehension ... #}
        {% set myentries = [] %}
        {% for code in enums['AssemblyLogCodes'] %}
            {{ myentries.append((code.value, gettext(code|string)))|e }}
        {% endfor %}
        {{ util.form_input_checkboxes("codes", label="Kategorien", info="Keine Auswahl entspricht allem.",
                entries=myentries, small=True) }}
        {# jinja does not support list comprehension ... #}
        {% set myentries = [] %}
        {% for assembly_id, assembly in all_assemblies|dictsort %}
            {{ myentries.append((assembly_id, assembly['title']))|e }}
        {% endfor %}
        {{ util.form_input_select(name="assembly_id", label="Versammlung", nulloption=True, entries=myentries,
                small=True) }}
        {{ util.form_input_from_to('start', 'stop', label='Einträge', type='number', small=True) }}
        {{ util.form_input_submit(value="Anzeigen", small=True) }}
    </form>
    {% endcall %}
{% endblock %}
