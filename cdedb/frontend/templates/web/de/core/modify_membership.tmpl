{% extends "web/de/core/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}
Mitgliedschaftsstatus von {{ ambience['persona']['given_names']|e }} {{ ambience['persona']['family_name']|e }} bearbeiten
{% endblock %}
{% block content %}
   {% if ambience['persona']['is_member'] %}
       <p>
            Der Button tut folgendes.
            <ul>
                <li>Beenden der Mitgliedschaft</li>
                <li>Löschen der Einwilligung zur Datenschutzerklärung</li>
            </ul>
       </p>

        <form action="{{ cdedblink('core/modify_membership')|e }}" method="POST" id="modifymembershipform">
            <div>
                {{ util.input_hidden(name="is_member", value=False) }}
                {{ util.form_input_submit(value="Mitgliedschaft terminieren") }}
            </div>
        </form>
   {% else %}

        <form action="{{ cdedblink('core/modify_membership')|e }}" method="POST" id="modifymembershipform">
            <div>
                {{ util.input_hidden(name="is_member", value=True) }}
                {{ util.form_input_submit(value="zum Mitglied machen") }}
            </div>
        </form>

        {# TODO Archivierung einfuegen #}
    {% endif %}
{% endblock %}
