{% set sidenav_active='core_change_log' %}
{% extends "web/de/core/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}
Nutzerdaten-Log [{{ values['start']|int|e }}–{{ (values['start']|int + log|length)|e }}]
{% endblock %}
{% block content %}
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>Zeitstempel</th>
                <th>Status</th>
                <th>Erstellt von</th>
                <th>Begutachtet von</th>
                <th>Betroffen</th>
                <th>Generation</th>
                <th>Notiz</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in log %}
                <tr>
                    <td>{{ entry['ctime']|datetime|e }}</td>
                    <td>{{ i18n(const.MemberChangeStati(entry['change_status'])|string)|e }}</td>
                    <td>
                        {% if entry['submitted_by'] %}
                            {{ util.href(show_user_link(entry['submitted_by']),
                                    persona_data[entry['submitted_by']]['given_names']|e
                                    + " " + persona_data[entry['submitted_by']]['family_name']|e)
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['reviewed_by'] %}
                            {{ util.href(show_user_link(entry['reviewed_by']),
                                    persona_data[entry['reviewed_by']]['given_names']|e
                                    + " " + persona_data[entry['reviewed_by']]['family_name']|e)
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['persona_id'] %}
                            {{ util.href(show_user_link(entry['persona_id']),
                                    persona_data[entry['persona_id']]['given_names']|e
                                    + " " + persona_data[entry['persona_id']]['family_name']|e)
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>{{ entry['generation']|e }}</td>
                    <td>{{ entry['change_note']|e }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {{ util.box_filter_begin() }}
        <form action="{{ cdedblink('core/view_changelog_meta')|e }}" method="GET" id="logshowform" class="form-horizontal">
            {# jinja does not support list comprehension ... #}
            {% set myentries = [] %}
            {% for status in const.MemberChangeStati %}
                {{ myentries.append((status.value, i18n(status|string), None))|e }}
            {% endfor %}
            {{ util.form_input_checkboxes("stati", label="Status", info="Keine Auswahl entspricht allem.",
                                     entries=myentries, small=True) }}
            <div class="form-group {% if 'start' in errors or 'stop' in errors %}has-error{% endif %}">
                <label class="col-sm-2 control-label">
                    Einträge
                </label>
                <div class="{% if small %}col-sm-6{% else %}col-sm-8{% endif %}">
                    <div class="input-group">
                        <span class="input-group-addon">von</span>
                        {{ util.input_text(name="start", type="number") }}
                        <span class="input-group-addon">bis</span>
                        {{ util.input_text(name="stop", type="number") }}
                    </div>
                    {% if 'start' in errors or 'stop' in errors %}
                        <div class="input-error-block">
                            {{ util.output_errors('start', True) }}
                            {{ util.output_errors('stop', True) }}
                        </div>
                    {% endif %}
                </div>
            </div>
            {{ util.form_input_submit(value="Anzeigen", small=True) }}
        </form>
    {{ util.box_filter_end() }}
{% endblock %}
