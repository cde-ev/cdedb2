{% set sidenav_active='core_mydata' %}
{% extends "web/de/core/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}Passwort ändern{% endblock %}
{% block content %}
    <form action="{{ cdedblink('core/change_password')|e }}" method="POST" id="passwordchangeform">
        <div>
            {{ util.form_input_text(name="old_password", label="Altes Passwort:", type="password") }}<br>
            {{ util.form_input_text(name="new_password", label="Neues Passwort:", type="password") }}<br>
            {{ util.form_input_text(name="new_password2", label="Wiederholung:", type="password") }}<br>
            {{ util.form_input_submit(value="Ändern") }}
        </div>
    </form>
{% endblock %}
