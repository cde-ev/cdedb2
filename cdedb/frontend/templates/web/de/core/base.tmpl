{% set mainnav_active='core' %}
{% extends "web/de/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block navigation %}
    {% if "persona" in user.roles %}
    <h2>Navigation</h2>
    <div class="list-group">
        {{ util.href(cdedblink("core/index"), "Start", aclass="list-group-item",
                icon="triangle-right", active=(sidenav_active=='core_index')) }}
        {{ util.href(cdedblink("core/mydata"), "Meine Daten", aclass="list-group-item",
                icon="user", active=(sidenav_active=='core_mydata')) }}
    </div>
        {% if is_admin %}
            <div class="list-group">
            {{ util.href(cdedblink("core/user_search"), "Nutzer verwalten", aclass="list-group-item",
                    icon="user", active=(sidenav_active=='core_manage_users')) }}
            {{ util.href(cdedblink("core/archived_user_search"), "Archivsuche", aclass="list-group-item",
                    icon="inbox", active=(sidenav_active=='core_manage_archive')) }}
            {{ util.href(cdedblink("core/genesis_list_cases"), "Accountanfragen", aclass="list-group-item",
                    icon="flag", active=(sidenav_active=='core_genesis_list')) }}
            {{ util.href(cdedblink("core/list_pending_changes"), "Änderungen prüfen", aclass="list-group-item",
                    icon="check", active=(sidenav_active=='core_pending_changes')) }}
            {{ util.href(cdedblink("core/view_log"), "Account-Log", aclass="list-group-item",
                    icon="list-alt", active=(sidenav_active=='core_log')) }}
            {{ util.href(cdedblink("core/view_changelog_meta"), "Nutzerdaten-Log", aclass="list-group-item",
                    icon="list-alt", active=(sidenav_active=='core_change_log')) }}
            </div>
            <div class="list-group">
            {{ util.href(cdedblink("core/meta_info_form"), "Metadaten", aclass="list-group-item",
                    icon="tags", active=(sidenav_active=='core_meta')) }}
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
