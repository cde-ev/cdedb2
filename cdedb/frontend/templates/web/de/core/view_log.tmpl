{% set sidenav_active='core_log' %}
{% extends "web/de/core/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}
Account-Log [{{ values['start']|int|e }}–{{ (values['start']|int + log|length)|e }}]
{% endblock %}
{% block content %}
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>Zeitstempel</th>
                <th>Code</th>
                <th>Verantwortlich</th>
                <th>Betroffen</th>
                <th>Zusatz</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in log %}
                <tr>
                    <td>{{ entry['ctime']|datetime|e }}</td>
                    <td>{{ i18n(const.CoreLogCodes(entry['code'])|string)|e }}</td>
                    <td>
                        {{ util.href(show_user_link(entry['submitted_by']),
                                user_data[entry['submitted_by']]['given_names']|e
                                + " " + user_data[entry['submitted_by']]['family_name']|e)
                        }}
                    </td>
                    <td>
                        {% if entry['persona_id'] %}
                            {{ util.href(show_user_link(entry['persona_id']),
                                    user_data[entry['persona_id']]['given_names']|e
                                    + " " + user_data[entry['persona_id']]['family_name']|e)
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>{{ entry['additional_info']|e }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {{ util.box_filter_begin() }}
        <form action="{{ cdedblink('core/view_log')|e }}" method="GET" id="logshowform" class="form-horizontal">
            {# jinja does not support list comprehension ... #}
            {% set myentries = [] %}
            {% for code in const.CoreLogCodes %}
                {{ myentries.append((code.value, i18n(code|string), None))|e }}
            {% endfor %}
            {{ util.form_input_checkboxes("codes", label="Kategorien", info="Keine Auswahl entspricht allem.",
                                     entries=myentries, small=True) }}
            {{ util.form_input_text(name="persona_id", label="Account", small=True) }}
            
            <div class="form-group {% if 'start' in errors or 'stop' in errors %}has-error{% endif %}">
                <label class="col-sm-2 control-label">
                    Einträge
                </label>
                <div class="{% if small %}col-sm-6{% else %}col-sm-8{% endif %}">
                    <div class="input-group">
                        <span class="input-group-addon">von</span>
                        {{ util.input_text(name="start", type="number") }}
                        <span class="input-group-addon">bis</span>
                        {{ util.input_text(name="stop", type="number") }}
                    </div>
                    {% if 'start' in errors or 'stop' in errors %}
                        <div class="input-error-block">
                            {{ util.output_errors('start', True) }}
                            {{ util.output_errors('stop', True) }}
                        </div>
                    {% endif %}
                </div>
            </div>
                {{ util.form_input_submit(value="Anzeigen", small=True) }}
            </div>
        </form>
    {{ util.box_filter_end() }}
{% endblock %}
