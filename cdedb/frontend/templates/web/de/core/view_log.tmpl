{% set sidenav_active='core_log' %}
{% extends "web/de/core/base.tmpl" %}
{% import "web/de/util.tmpl" as util with context %}
{% block title %}
Account-Log [{{ values['start']|int|e }}–{{ (values['start']|int + log|length)|e }}]
{% endblock %}
{% block breadcrumb %}
{{ util.breadcrumb_link(cdedblink("core/index"), "Start") }}
{{ util.breadcrumb_link(cdedblink("core/view_log"), "Account-Log", active="True") }}
{% endblock %}
{% block content %}
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>Zeitstempel</th>
                <th>Code</th>
                <th>Verantwortlich</th>
                <th>Betroffen</th>
                <th>Zusatz</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in log %}
                <tr>
                    <td>{{ entry['ctime']|datetime|e }}</td>
                    <td>{{ i18n(enums['CoreLogCodes'](entry['code'])|string)|e }}</td>
                    <td>
                        {% if entry['submitted_by'] %}
                            {{ util.persona_anchor(personas[entry['submitted_by']]) }}
                        {% else %}
                            –
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['persona_id'] %}
                            {{ util.persona_anchor(personas[entry['persona_id']]) }}
                        {% else %}
                            –
                        {% endif %}
                    </td>
                    <td>{{ entry['additional_info']|e }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {{ util.box_filter_begin() }}
        <form action="{{ cdedblink('core/view_log')|e }}" method="GET" id="logshowform" class="form-horizontal">
            {# jinja does not support list comprehension ... #}
            {% set myentries = [] %}
            {% for code in enums['CoreLogCodes'] %}
                {{ myentries.append((code.value, i18n(code|string)))|e }}
            {% endfor %}
            {{ util.form_input_checkboxes("codes", label="Kategorien", info="Keine Auswahl entspricht allem.",
                    entries=myentries, small=True) }}
            {{ util.form_input_text(name="persona_id", label="Account", small=True) }}
            
            {{ util.form_input_from_to('start', 'stop', label='Einträge', type='number', small=True) }}
            {{ util.form_input_submit(value="Anzeigen", small=True) }}
        </form>
    {{ util.box_filter_end() }}
{% endblock %}
