{% macro format_query(spec, titles, choices, output_selection=True) %}
    <script type="text/javascript">
        // adjust input element to the selected operator
        // this should be called from the corresponding change trigger
        function update_choices(field, choices, validator) {
            var previous = $("#qinput_" + field).val();
            $("#qinput_" + field).remove();
            // NOTE cdedb.query.QueryOperator values are embedded
            if ($('#qop_'+field).val() == "0" || $('#qop_'+field).val() == "1") {
                // do nothing
            } else if ($('#qop_'+field).val() == "2") {
                if (!$.isEmptyObject(choices)) {
                    $("#qspan_"+field).append($("<select>", {"name" : "qval_" + field, "id" : "qinput_"+field}));
                    $("#qinput_"+field).append($("<option>", {"value" : ""}));
                    for (var key in choices) {
                        if (choices.hasOwnProperty(key)) {
                            $("#qinput_"+field).append($("<option>", {"value" : key, "html" : choices[key], selected : (key == previous)}));
                        }
                    }
                } else {
                    if (validator == "bool") {
                        $("#qspan_"+field).append($("<select>", {"name" : "qval_" + field, "id" : "qinput_"+field}));
                        $("#qinput_"+field).append($("<option>", {"value" : ""}));
                        var bool_choices = {"True" : "wahr", "False" : "falsch"};
                        for (var key in bool_choices) {
                            $("#qinput_"+field).append($("<option>", {"value" : key, "html" : bool_choices[key], selected : (key == previous)}));
                        }
                    } else {
                        $("#qspan_"+field).append($("<input>", {"name" : "qval_" + field, "id" : "qinput_"+field, "type" : "text", "value" : previous}));
                    }
                }
            } else {
                $("#qspan_"+field).append($("<input>", {"name" : "qval_" + field, "id" : "qinput_"+field, "type" : "text", "value" : previous}));
            }
        }
    </script>
    {% with OPERATOR_LABELS = {0 : "leer",
                               1 : "nichtleer",
                               2 : "gleich",
                               3 : "eines aus",
                               4 : "ähnlich",
                               5 : "regex",
                               6 : "enthält alle",
                               10 : "kleiner",
                               11 : "kleinergleich",
                               12 : "zwischen",
                               13 : "größergleich",
                               14 : "größer",} %}
        <table>
            {% for field in spec %}
                {# NOTE: We split of schemas for ids, since the dot messes up jQuery selectors. #}
                {% with normalized_field = field.split('.')[-1] %}
                    <tr {% if field in errors %} class="errorInput" {% endif %}>
                        <td>
                            {% with name = "qsel_{}".format(field) %}
                                {% if output_selection %}
                                    {{ input_checkbox(name, aclass="outputSelector") }}
                                {% else %}
                                    {{ input_hidden(name, value=True) }}
                                {% endif %}
                            {% endwith %}
                        </td>
                        <td> {{ titles[field]|e }} </td>
                        <td>
                            {% with name = "qop_{}".format(field) %}
                                {% with theid = "qop_{}".format(normalized_field) %}
                                    {# jinja does not support list comprehension ... #}
                                    {% set myentries = [] %}
                                    {% for op in VALID_QUERY_OPERATORS[spec[field]] %}
                                        {{ myentries.append((op.value, OPERATOR_LABELS[op.value], None))|e }}
                                    {% endfor %}
                                    {{ input_select(name, entries=myentries, defaultvalue=VALID_QUERY_OPERATORS[spec[field]][0].value,
                                                    anid=theid) }}
                                    <script type="text/javascript">
                                        $(document).ready(function(){
                                            $("#{{ theid|e }}").change(function (){ update_choices("{{ normalized_field|e }}", {{ choices.get(field, '')|json }}, "{{ spec[field]|e }}") });
                                            $("#{{ theid|e }}").trigger('change');
                                        });
                                    </script>
                                {% endwith %}
                            {% endwith %}
                        </td>
                        <td>
                            <span id="qspan_{{ normalized_field|e }}">
                                {{ input_text("qval_{}".format(field), anid="qinput_{}".format(normalized_field)) }}
                            </span>
                        </td>
                    </tr>
                {% endwith %}
            {% endfor %}
            {% for title, name in (("1. Sortierung nach", "qord_primary"), ("2. Sortierung nach", "qord_secondary"), ("3. Sortierung nach", "qord_tertiary"))%}
                <tr>
                    <td colspan="2"> {{ title|e }} </td>
                    <td colspan="2">
                        {# jinja does not support list comprehension ... #}
                        {% set myentries = [] %}
                        {% for field in spec %}
                            {{ myentries.append((field, titles[field], None))|e }}
                        {% endfor %}
                        {{ input_select(name, entries=myentries, nulloption=True)}}
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% endwith %}
{% endmacro %}

