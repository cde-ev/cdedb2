{% endmacro %}

{% macro checkbox_checked(anid='', aclass='') %}
   <input type="checkbox" checked disabled {% if anid %} id="{{ anid|e }}" {% endif %}
     {% if aclass %} class="{{ aclass|e }}" {% endif %}>
{% endmacro %}

{% macro checkbox_unchecked(anid='', aclass='') %}
