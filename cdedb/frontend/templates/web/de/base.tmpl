{# This is the base template to be extended by (nearly) all html templates.
   It provides a skeleton where only the content needs to be filled in. #}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>CdEDB – {% block title %}CdEDB{% endblock %}</title>
        <link rel="shortcut icon" type="image/x-icon" href="{{ staticurl("favicon.ico")|e }}" media="print" />

        <script type="text/javascript" src="{{ staticurl("jquery-2.min.js")|e }}"></script>
        <link href="{{ staticurl("bootstrap-3/css/bootstrap.min.css")|e }}" rel="stylesheet" media="all" />
        <script type="text/javascript" src="{{ staticurl("bootstrap-3/js/bootstrap.min.js")|e }}"></script>

        <link rel="stylesheet" type="text/css" href="{{ staticurl("cdedb.css")|e }}" media="all" />
        <link rel="stylesheet" type="text/css" href="{{ staticurl("print.css")|e }}" media="print" />

        <script type="text/javascript" src="{{ staticurl("cdedb-general.js")|e }}"></script>

        {% block scripts %}{% endblock %}
    </head>
    <body>
        <!-- main navigation bar -->
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <p class="navbar-collapse-header">Hauptmenü</p>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="navbar-collapse-1" role="navigation">
                    {% if "persona" in user.roles %}
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <form action="{{ cdedblink("core/logout")|e }}" method="POST" id="logoutform"
                                  class="navbar-form">
                                    <p class="navbar-text">
                                        <span id="displayname">
                                            {{ util.href(cdedblink("core/mydata"), user.display_name, icon="user") }}
                                        </span>
                                    </p>
                                    <button type="submit" name="submitlogout" value="Abmelden"
                                      class="btn navbar-button" title="Logout">
                                        <span class="glyphicon glyphicon-off"></span>
                                        <span class="visible-xs-inline-block">Logout</span>
                                    </button>
                                </form>
                            </li>
                        </ul>
                    {% endif %}

                    <ul class="nav navbar-nav">
                        <li {% if mainnav_active == 'core' %}class="active"{% endif %}>
                            {{ util.href(cdedblink("core/index"), "Start", icon="dashboard") }}
                            </li>
                        {% if "cde" in user.roles %}
                            <li {% if mainnav_active == 'cde' %}class="active"{% endif %}>
                                {{ util.href(cdedblink("cde/index"), "CdE", icon="education") }}
                                </li>
                        {% endif %}
                        {% if "event" in user.roles %}
                            <li {% if mainnav_active == 'event' %}class="active"{% endif %}>
                                {{ util.href(cdedblink("event/index"), "Veranstaltungen", icon="blackboard") }}
                            </li>
                        {% endif %}
                        {% if "ml" in user.roles %}
                            <li {% if mainnav_active == 'ml' %}class="active"{% endif %}>
                                {{ util.href(cdedblink("ml/index"), "Mailinglisten", icon="envelope") }}
                            </li>
                        {% endif %}
                        {% if "assembly" in user.roles %}
                            <li {% if mainnav_active == 'assembly' %}class="active"{% endif %}>
                                {{ util.href(cdedblink("assembly/index"), "Versammlung", icon="bullhorn") }}
                            </li>
                        {% endif %}
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        <div class="container">
            <div class="row row-wide">
                <div class="col-md-3 col-wide-3" role="navigation">
                    {% block navigation %}
                    {% endblock %}
                </div>
                <div class="col-md-9 col-wide-auto" role="main">
                    {% if self.breadcrumb %}
                        <ol class="breadcrumb breadcrumb-small">{% block breadcrumb %}{% endblock %}</ol>
                    {% endif %}
                    {% block heading %}
                        <h1 class="title">{{ self.title() }}</h1>
                    {% endblock %}

                    <div id="notifications">
                        {% with icontypes = {"success" : "ok-sign", "info" : "info-sign", "question" : "question-sign",
                                             "warning" : "exclamation-sign", "error" : "remove-sign"},
                                alerttypes = {"success" : "success", "info" : "info", "question" : "info",
                                              "warning" : "warning", "error" : "danger"},
                                messagetypes = {"success" : "Erfolg!", "info" : "Info!", "question" : "Frage:",
                                                "warning" : "Warnung!", "error" : "Fehler!"} %}
                            {% for ntype, message in notifications %}
                                <div class="alert alert-{{ alerttypes[ntype] }}">
                                    <span class="glyphicon glyphicon-{{ icontypes[ntype] }}"></span>
                                    <strong>{{ messagetypes[ntype] }}</strong>
                                    <span class="notificationMessage">{{ i18n(message)|e }}</span>
                                </div>
                            {% endfor %}
                        {% endwith %}
                    </div>

                    <div id="content">
                        {% block content %}
                            This should not be visible.
                        {% endblock %}
                    </div>
                </div>
            </div>
            <div id="footer">
                {% block footer %}{{ debugstring|e }} ; time taken: {{ generation_time()|e }}{% endblock %}
            </div>
        </div>
    </body>
    {% if errors %}
        <!-- error listing for debugging
             {{ errors|e }}
        -->
    {% endif %}
</html>
