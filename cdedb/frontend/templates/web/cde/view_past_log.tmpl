{% set sidenav_active='cde_past_events_log' %}
{% extends "web/cde/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans -%}
        Past Events Log
    {%- endtrans %}
    [{{ values['start']|int }}–{{ (values['start']|int + log|length) }}]
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("cde/view_past_log"), gettext("Past Events Log"), active=True) }}
{% endblock %}
{% block content %}
    {% if log %}
        <div class="p">
            {{ util.href("#logshowform", gettext("Go to Filter."), aclass="btn btn-default btn-sm", icon="arrow-down") }}
        </div>
    {% endif %}
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>{% trans -%}Timestamp{%- endtrans %}</th>
                <th>{% trans -%}Code{%- endtrans %}</th>
                <th>{% trans -%}Submitted By{%- endtrans %}</th>
                <th>{% trans -%}Event{%- endtrans %}</th>
                <th>{% trans -%}Affected{%- endtrans %}</th>
                <th>{% trans -%}Additional Info{%- endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in log %}
                <tr>
                    <td>{{ entry['ctime']|datetime(lang=lang) }}</td>
                    <td>{{ gettext(enums['PastEventLogCodes'](entry['code'])|string) }}</td>
                    <td>
                        {% if entry['submitted_by'] %}
                            {{ util.persona_anchor(personas[entry['submitted_by']]) }}
                        {% else %}
                            –
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['pevent_id'] %}
                            {{ util.href(cdedblink("cde/show_past_event", {"pevent_id": entry['pevent_id']}),
                                    pevents[entry['pevent_id']]['title']) }}
                        {% else %}
                            –
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['persona_id'] %}
                            {{ util.persona_anchor(personas[entry['persona_id']]) }}
                        {% else %}
                            –
                        {% endif %}
                    </td>
                    <td>{{ entry['additional_info'] }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {% call util.bootstrap_panel(title=gettext("Filter"), icon="search", aclass="panel-primary") %}
        <form action="{{ cdedblink('cde/view_past_log') }}" method="GET" id="logshowform" class="form-horizontal">
            {{ util.form_input_checkboxes("codes", label=gettext("Categories"), info=gettext("No selection means everything."),
                                          entries=enums['PastEventLogCodes']|enum_entries(processing=gettext),
                                          small=True) }}
            {{ util.form_input_select(name="pevent_id", label=gettext("Event"), nulloption="",
                                      entries=pevents|dictsort|dict_entries('id', 'title'), small=True) }}
            {{ util.form_input_from_to('start', 'stop', label=gettext("Entries"), type='number', small=True) }}
            {{ util.form_input_submit(value=gettext("Apply"),small=True) }}
        </form>
    {% endcall %}
{% endblock %}
