{% set sidenav_active='cde_finance_log' %}
{% extends "web/cde/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans -%}
        Finance Log
    {%- endtrans %}
    [{{ values['start']|int|e }}–{{ (values['start']|int + log|length)|e }}]
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("cde/view_finance_log"), gettext("Finance Log"), active="True") }}
{% endblock %}
{% block content %}
    <div class="p">
        {{ util.href("#logshowform", gettext("Go to Filter."), aclass="btn btn-info btn-sm", icon="search") }}
    </div>
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>{% trans -%}Timestamp{%- endtrans %}</th>
                <th>{% trans -%}Code{%- endtrans %}</th>
                <th>{% trans -%}Submitted By{%- endtrans %}</th>
                <th>{% trans -%}Affected{%- endtrans %}</th>
                <th>{% trans -%}Amount{%- endtrans %}</th>
                <th>{% trans -%}Balance{%- endtrans %}</th>
                <th>{% trans -%}Additional Info{%- endtrans %}</th>
                <th>{% trans -%}Members{%- endtrans %}</th>
                <th>{% trans -%}Overall Balance{%- endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in log %}
                <tr>
                    <td>{{ entry['ctime']|datetime(lang=lang)|e }}</td>
                    <td>{{ gettext(enums['FinanceLogCodes'](entry['code'])|string)|e }}</td>
                    <td>
                        {% if entry['submitted_by'] %}
                            {{ util.persona_anchor(personas[entry['submitted_by']]) }}
                        {% else %}
                            –
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['persona_id'] %}
                            {{ util.persona_anchor(personas[entry['persona_id']]) }}
                        {% else %}
                            –
                        {% endif %}
                    </td>
                    <td>{{ entry['delta']|money }}</td>
                    <td>{{ entry['new_balance']|money }}</td>
                    <td>{{ entry['additional_info']|e }}</td>
                    <td>{{ entry['members']|e }}</td>
                    <td>{{ entry['total']|money }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% call util.bootstrap_panel(title=gettext("Filter"), icon="search", aclass="panel-primary") %}
        <form action="{{ cdedblink('cde/view_finance_log')|e }}" method="GET" id="logshowform" class="form-horizontal">
            {{ util.form_input_checkboxes("codes", label=gettext("Categories"), info=gettext("No selection means everything."),
                    entries=enums['FinanceLogCodes']|enum_entries(processing=gettext), small=True) }}
            {{ util.form_input_text(name="persona_id", label=gettext("Account"), small=True) }}
            {{ util.form_input_from_to('start', 'stop', label=gettext("Entries"), type='number', small=True) }}
            {{ util.form_input_submit(value=gettext("Apply"), small=True) }}
        </form>
    {% endcall %}
{% endblock %}
