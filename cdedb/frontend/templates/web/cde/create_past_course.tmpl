{% set sidenav_active='cde_past_events' %}
{% extends "web/cde/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block scripts %}{{ util.cdedb_script('cdedb_helper.js') }}{% endblock %}
{% set jshint='weak' %}
{% block title %}
    {% trans pevent=ambience['pevent']['title'] -%}
        Create Course ({{ pevent }})
    {%- endtrans %}
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("cde/list_past_events"), gettext("Past Events")) }}
{{ util.breadcrumb_link(cdedblink("cde/show_past_event", {"pevent_id": ambience['pevent']['id']}),
        ambience['pevent']['title'], icon="calendar") }}
{{ util.breadcrumb_link(cdedblink("cde/create_past_course", {"pevent_id": ambience['pevent']['id']}),
        gettext("Create Course"), active=True) }}
{% endblock %}
{% block content %}
    <script type="text/javascript">
        $(function() {
            $('#createcourseform').cdedbProtectChanges();
        });
    </script>
    <form action="{{ cdedblink('cde/create_past_course') }}" method="POST" id="createcourseform"
            class="form-horizontal">
        {{ util.anti_csrf_token('cde/create_past_course') }}
        {{ util.form_input_text(name="nr", label=gettext("Number")) }}
        {{ util.form_input_text(name="title", label=gettext("Title")) }}
        {{ util.form_input_textarea(name="description", label=gettext("Description"), rows="5",
                                    info=gettext("Supports %(infolink)s.")|format(
                                    infolink=util.href(docurl("Handbuch_Markdown"), gettext("Markdown"), title=gettext("Short Markdown summary")))|s) }}
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <div class="form-control-static text-info">
                    {{ util.make_icon('info-sign') }}
                    {% trans -%}Warning: The new Course will be immediately visible to all CdE-Members viewing past Events.{%- endtrans %}
                </div>
            </div>
        </div>
        {{ util.form_input_submit(value=gettext("Create"), cancellink=cdedblink("cde/show_past_event")) }}
    </form>
{% endblock %}
