{% set sidenav_active='ml_ml_log' %}
{% extends "web/ml/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans title=ambience['mailinglist']['title']|e -%}
        {{ title }} – Log
    {%- endtrans %}
    [{{ values['start']|int|e }}–{{ (values['start']|int + log|length)|e }}]
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("ml/show_mailinglist"), ambience['mailinglist']['title'], icon="envelope") }}
{{ util.breadcrumb_link(cdedblink("ml/view_ml_log"), gettext("Log"), active=True) }}
{% endblock %}
{% block content %}
    <div class="p">
        {{ util.href("#logshowform", gettext("Go to Filter."), aclass="btn btn-info btn-sm", icon="search") }}
    </div>
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>{% trans -%}Timestamp{%- endtrans %}</th>
                <th>{% trans -%}Code{%- endtrans %}</th>
                <th>{% trans -%}Submitted By{%- endtrans %}</th>
                <th>{% trans -%}Affected{%- endtrans %}</th>
                <th>{% trans -%}Additional Info{%- endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in log %}
                <tr>
                    <td>{{ entry['ctime']|datetime(lang=lang)|e }}</td>
                    <td>{{ gettext(enums['MlLogCodes'](entry['code'])|string)|e }}</td>
                    <td>
                        {% if entry['submitted_by'] %}
                            {{ util.persona_anchor(personas[entry['submitted_by']], ml_id=ambience['mailinglist']['id']) }}
                        {% else %}
                            –
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['persona_id'] %}
                            {{ util.persona_anchor(personas[entry['persona_id']], ml_id=ambience['mailinglist']['id']) }}
                        {% else %}
                            –
                        {% endif %}
                    </td>
                    <td>{{ entry['additional_info']|e }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% call util.bootstrap_panel(title=gettext("Filter"), icon="search", aclass="panel-primary") %}
        <form action="{{ cdedblink('ml/view_ml_log')|e }}" method="GET" id="logshowform" class="form-horizontal">
            {{ util.form_input_checkboxes("codes", label=gettext("Categories"), info=gettext("No selection means everything."),
                    entries=enums['MlLogCodes']|enum_entries(processing=gettext), small=True) }}

            {{ util.form_input_from_to('start', 'stop', label=gettext("Entries"), type='number', small=True) }}
            {{ util.form_input_submit(value=gettext("Apply"), small=True) }}
        </form>
    {% endcall %}
{% endblock %}
