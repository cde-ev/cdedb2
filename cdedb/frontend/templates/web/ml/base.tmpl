{% set mainnav_active='ml' %}
{% extends "web/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}

{% macro ml_inner_navigation(data) %}
        <div class="list-group tear-down">
            {{ util.href(cdedblink("ml/show_mailinglist", {'mailinglist_id': data['id']}), gettext("Overview"),
                    icon="triangle-right", aclass="list-group-item", active=(sidenav_active == 'ml_show')) }}
            {% if data['id'] in user.moderator or is_admin %}
                {{ util.href(cdedblink("ml/management", {'mailinglist_id': data['id']}), gettext("Manage"),
                        aclass="list-group-item", icon="list", active=(sidenav_active == 'ml_manage')) }}
                {{ util.href(cdedblink("ml/show_subscription_details", {'mailinglist_id': data['id']}), gettext("Subscription Details"),
                        aclass="list-group-item", icon="wrench", active=(sidenav_active == 'ml_details')) }}
                {{ util.href(cdedblink("ml/change_mailinglist_form", {'mailinglist_id': data['id']}),
                        gettext("Configuration"), aclass="list-group-item", icon="cog",
                        active=(sidenav_active == 'ml_change')) }}
                {{ util.href(cdedblink("ml/view_ml_log", {'mailinglist_id': data['id']}), gettext("Log"),
                             aclass="list-group-item", icon="list-alt", active=(sidenav_active == 'ml_ml_log')) }}
            {% endif %}
        </div>
{% endmacro %}

{% block breadcrumb %}
    {{ util.breadcrumb_link(cdedblink("ml/index"), gettext("Mailinglists")) }}
{% endblock %}
{% block navigation %}
    {% if ambience['mailinglist'] %}
        <p>
            {% if is_admin and not ambience['mailinglist']['is_active'] %}
                {{ util.href(cdedblink("ml/list_mailinglists"), gettext("Mailinglist-Overview"),
                             icon="circle-arrow-up") }}
            {% else %}
                {{ util.href(cdedblink("ml/index"), gettext("Mailinglist-Overview"), icon="circle-arrow-up") }}
            {% endif %}
        </p>

        <h4>{{ util.make_icon('envelope', arialabel='Mailingliste') }}
            {{ ambience['mailinglist']['title'] }}</h4>
        {{ ml_inner_navigation(ambience['mailinglist']) }}
    {% else %}
        <h4>Mailinglisten</h4>
        <div class="list-group tear-down">
            {% if is_admin %}
                {{ util.href(cdedblink("ml/index"), gettext("Active Mailinglists"), icon="triangle-right",
                        aclass="list-group-item", active=(sidenav_active == 'ml_index')) }}
                {{ util.href(cdedblink("ml/list_mailinglists"), gettext("All Mailinglists"), icon="cog",
                        aclass="list-group-item", active=(sidenav_active == 'ml_all')) }}
            </div>
            <div class="list-group tear-down">
                {{ util.href(cdedblink("ml/user_search"), gettext("Manage Users"),
                        icon="user", aclass="list-group-item", active=(sidenav_active == 'ml_users')) }}
                {{ util.href(cdedblink("ml/view_log"), gettext("Log"), icon="list-alt", aclass="list-group-item",
                        active=(sidenav_active == 'ml_log')) }}
            {% else %}
                {{ util.href(cdedblink("ml/index"), gettext("Overview"), icon="triangle-right", aclass="list-group-item",
                        active=(sidenav_active == 'ml_index')) }}
            {% endif %}
        </div>
    {% endif %}
    <hr class="strong visible-xs visible-sm" />
{% endblock %}
