{% set sidenav_active='ml_index' %}
{% extends "web/ml/base.tmpl" %}
{% block title %}Mailinglisten{% endblock %}
{% block breadcrumb %}
{{ util.breadcrumb_link(cdedblink("ml/index"), "Mailinglisten", active=True) }}
{% endblock %}
{% macro format_entry(mailinglist_id, title) %}
    <li>
        {{ util.deko_checkbox(mailinglist_id in subscriptions, titles=['nicht abonniert','abonniert']) }}
        {{ util.href(cdedblink("ml/show_mailinglist", {'mailinglist_id': mailinglist_id}), title) }}
        {% if user.persona_id in mailinglist_infos[mailinglist_id]['moderators'] %}
            {{ util.href(cdedblink('ml/management',{'mailinglist_id' : mailinglist_id}), 'Verwalten', icon='list',
                    aclass='btn btn-xs btn-info') }}
        {% endif %}
    </li>
{% endmacro %}
{% block content %}
    {% if is_admin %}
        <div class="p">
            {{ util.href(cdedblink("ml/create_mailinglist_form"), "Mailingliste anlegen", icon="plus",
                    aclass="btn btn-sm btn-success") }}
            {{ util.href(cdedblink("ml/global_check_states"), "globaler Konsistenzcheck", icon="check",
                    aclass="btn btn-sm btn-info") }}
        </div>
    {% endif %}
    <p>
        Hier findest Du die Mailinglisten des CdE; insbesondere auch zu
        Akademien und Mitgliederversammlungen.
    </p>

    <h3>Allgemeine Listen</h3>
    <ul class="styleless">
        {% for mailinglist_id, title in mailinglists|dictsort(False, 'value') %}
            {% if mailinglist_infos[mailinglist_id]['audience_policy'] not in (
                    enums['AudiencePolicy'].require_assembly,
                    enums['AudiencePolicy'].require_event) %}
                {{ format_entry(mailinglist_id, title) }}
            {% endif %}
        {% endfor %}
    </ul>
    {% if 'event' in user.roles %}
    <h3>Veranstaltungslisten</h3>
    <ul class="styleless">
        {% for mailinglist_id, title in mailinglists|dictsort(False, 'value') %}
            {% if  mailinglist_infos[mailinglist_id]['audience_policy'] == enums['AudiencePolicy'].require_event %}
                {{ format_entry(mailinglist_id, title) }}
            {% endif %}
        {% endfor %}
    </ul>
    {% endif %}
    {% if 'assembly' in user.roles %}
    <h3>Versammlungslisten</h3>
    <ul class="styleless">
        {% for mailinglist_id, title in mailinglists|dictsort(False, 'value') %}
            {% if  mailinglist_infos[mailinglist_id]['audience_policy'] == enums['AudiencePolicy'].require_assembly %}
                {{ format_entry(mailinglist_id, title) }}
            {% endif %}
        {% endfor %}
    </ul>
    {% endif %}
{% endblock %}
