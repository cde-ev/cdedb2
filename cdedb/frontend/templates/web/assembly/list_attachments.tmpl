{% set sidenav_active='assembly_attachments' %}
{% extends "web/assembly/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% import "web/assembly/util.tmpl" as assembly_util with context %}
{% block scripts %}{{ util.cdedb_script('cdedb_helper.js') }}{% endblock %}
{% set jshint = 'weak' %}
{% block title %}
    {% trans title=ambience['assembly']['title'] %}
        Attachment Overview ({{ title }})
    {% endtrans %}
{% endblock %}
{% block heading %}
    <h1 class="title">
        {% trans %}
            Attachment Overview
        {% endtrans %}
        <small>{{ util.make_icon('bullhorn') }} {{ ambience['assembly']['title'] }}</small>
    </h1>
{% endblock %}
{% block breadcrumb %}
    {{ super() }}
    {{ util.breadcrumb_link(cdedblink("assembly/show_assembly"), ambience['assembly']['title'], icon="bullhorn") }}
    {{ util.breadcrumb_link(cdedblink("assembly/list_attachments"), gettext("Attachment Overview"), icon="file", active=True) }}

{% endblock %}
{% block content %}
    {# This is more complicated now... #}
    {% set edit = ambience['assembly']['is_active'] and ("assembly_presider" in user.admin_views
                                                         or ambience['assembly']['id'] in user.presider) %}
    {% if attachments %}
        <ul class="slim" id="attachments">
            {% for attachment_id, attachment in attachments.items() %}
                {% set attachment_versions = attachments_versions[attachment_id] %}
                {% set current_version = attachment_versions[attachment["current_version_nr"]] %}
                <li>
                    <div class="p" id="attachment_container_{{ attachment_id }}">
                        {{ assembly_util.print_attachment_version(current_version, edit, add=True, delete=attachment_versions|length>1) }}
                        {% if attachment_versions|length > 1 %}
                            <ul>
                                {% for version_nr, version in attachment_versions|keydictsort(EntitySorter.attachment_version)|reverse %}
                                    {% if version_nr != current_version['version_nr'] %}
                                        <li>
                                            {{ assembly_util.print_attachment_version(version, edit, add=False, delete=True) }}
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if not count and not edit %}
        <p class="text-muted">
            {% trans %}No attachments have been uploaded yet.{% endtrans %}
        </p>
    {% endif %}
{% endblock %}
