{% set sidenav_active='assembly_ballots' if ambience['ballot'] else 'assembly_show' %}
{% extends "web/assembly/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% import "web/assembly/util.tmpl" as assembly_util with context %}
{% block title %}
    {% if ambience['ballot'] %}
        {% trans title_assembly=ambience['assembly']['title'], title_ballot=ambience['ballot']['title'] %}
            Edit File ({{ title_assembly }}/{{ title_ballot }})
        {% endtrans %}
    {% else %}
        {% trans title=ambience['assembly']['title'] %}
            Edit File ({{ title }})
        {% endtrans %}
    {% endif %}
{% endblock %}
{% block heading %}
    <h1 class="title">
        {% trans %}
            Edit File
        {% endtrans %}
        {% if ambience['ballot'] %}
            <small>
                {{- util.make_icon('thumbs-up', arialabel=gettext("Ballot")) }} {{ ambience['ballot']['title'] -}}
            </small>
        {% else %}
            <small>
                {{- util.make_icon('bullhorn', arialabel=gettext("Assembly")) }} {{ ambience['assembly']['title'] -}}
            </small>
        {% endif %}
        {{ assembly_util.small_attachment_title(history) }}
    </h1>
{% endblock %}
{% block breadcrumb %}
    {{ super() }}
    {{ util.breadcrumb_link(cdedblink("assembly/show_assembly"), ambience['assembly']['title'], icon="bullhorn") }}
    {% if ambience['ballot'] %}
        {{ util.breadcrumb_link(cdedblink("assembly/list_ballots"), gettext("Ballots")) }}
        {{ util.breadcrumb_link(cdedblink("assembly/show_ballot"), ambience['ballot']['title'], icon="thumbs-up") }}
    {% endif %}
    {{ util.breadcrumb_link("", history[history.keys()|max]['title'], icon="file") }}
    {{ util.breadcrumb_link(cdedblink("assembly/edit_attachment_version", {'attachment_id': attachment_id, 'version': version}),
                            gettext("Edit File"), active=True) }}
{% endblock %}
{% block content %}
    <form action="{{ cdedblink('assembly/edit_attachment') }}" method="POST" enctype="multipart/form-data"
            id="editattachmentform" class="form-horizontal">
        {{ util.anti_csrf_token('assembly/edit_attachment') }}
        {{ util.input_hidden(name="attachment_id") }}
        {{ util.input_hidden(name="version") }}
        {{ util.form_input_text(name="title", label=gettext("Label")) }}
        {{ util.form_input_text(name="authors", label=gettext("Authors")) }}
        {{ util.form_input_text(name="filename", label=gettext("Filename")) }}
        {{ util.form_input_submit(cancellink=(cdedblink('assembly/show_ballot') if ambience['ballot'] else cdedblink('assembly/show_assembly'))) }}
    </form>
{% endblock %}
