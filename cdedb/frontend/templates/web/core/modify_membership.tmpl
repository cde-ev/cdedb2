{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans given_names=ambience['persona']['given_names']|e, family_name=ambience['persona']['family_name'] -%}
    	Modify Memberhip for {{ given_names }} {{ family_name }}
    {%- endtrans %}
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(show_user_link(ambience['persona']['id']), "{} {}".format(ambience['persona']['given_names'],
                                                                                  ambience['persona']['family_name']),
        icon="user") }}
{{ util.breadcrumb_link(cdedblink("core/modify_membership"), gettext("Modify Membership"), active="True") }}
{% endblock %}
{% block content %}
   {% if ambience['persona']['is_member'] %}
        <p>
            {{ util.make_icon("info-sign") }}
            {% trans -%}Here You can terminate the CdE-Membership. This has the following Effects:{%- endtrans %}
        </p>
        <ul>
            <li>{% trans -%}Termination of Membership{%- endtrans %}</li>
            <li>{% trans -%}Deletion of Privacy Policy Consent{%- endtrans %}</li>
            <li>{% trans -%}Loss of Membership Fee Balance{%- endtrans %}</li>
        </ul>

        <form action="{{ cdedblink('core/modify_membership')|e }}" method="POST" id="modifymembershipform">
            <div>
                {{ util.input_hidden(name="is_member", value=False) }}
                {{ util.input_submit(value=gettext("Terminate Membership"), aclass="btn btn-warning") }}&emsp;
                {{ util.href(show_user_link(ambience['persona']['id']), gettext("Cancel"), icon="remove",
                        aclass="btn btn-default") }}
            </div>
        </form>
   {% else %}
        <form action="{{ cdedblink('core/modify_membership')|e }}" method="POST" id="modifymembershipform">
            <div>
                {{ util.input_hidden(name="is_member", value=True) }}
                {{ util.input_submit(value=gettext("Make a Member")) }}&emsp;
                {{ util.href(show_user_link(ambience['persona']['id']), "Abbrechen", icon="remove",
                        aclass="btn btn-default") }}
            </div>
        </form>

        {# TODO Archivierung einfuegen #}
    {% endif %}
{% endblock %}
