{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    Mitgliedschaftsstatus von {{ ambience['persona']['given_names']|e }} {{ ambience['persona']['family_name']|e }}
    bearbeiten
{% endblock %}
{% block breadcrumb %}
{{ util.breadcrumb_link(cdedblink("core/index"), "Start") }}
{{ util.breadcrumb_link(show_user_link(ambience['persona']['id']), "{} {}".format(ambience['persona']['given_names'],
                                                                                  ambience['persona']['family_name']),
        icon="user") }}
{{ util.breadcrumb_link(cdedblink("core/modify_membership"), "Mitgliedschaft ändern", active="True") }}
{% endblock %}
{% block content %}
   {% if ambience['persona']['is_member'] %}
        <p>
            {{ util.make_icon("info-sign") }} Hiermit kann die CdE-Mitglidschaft beendet werden. Das bewirkt folgendes:
        </p>
        <ul>
            <li>Beenden der Mitgliedschaft</li>
            <li>Löschen der Einwilligung zur Datenschutzerklärung</li>
        </ul>

        <form action="{{ cdedblink('core/modify_membership')|e }}" method="POST" id="modifymembershipform">
            <div>
                {{ util.input_hidden(name="is_member", value=False) }}
                {{ util.input_submit(value="Mitgliedschaft terminieren", aclass="btn btn-warning") }}&emsp;
                {{ util.href(show_user_link(ambience['persona']['id']), "Abbrechen", icon="remove",
                        aclass="btn btn-default") }}
            </div>
        </form>
   {% else %}
        <form action="{{ cdedblink('core/modify_membership')|e }}" method="POST" id="modifymembershipform">
            <div>
                {{ util.input_hidden(name="is_member", value=True) }}
                {{ util.input_submit(value="zum Mitglied machen") }}&emsp;
                {{ util.href(show_user_link(ambience['persona']['id']), "Abbrechen", icon="remove",
                        aclass="btn btn-default") }}
            </div>
        </form>

        {# TODO Archivierung einfuegen #}
    {% endif %}
{% endblock %}
