{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans -%}
    	Set New Password
    {%- endtrans %}
{% endblock %}
{% block content %}
    <p>
        {% trans -%}
        	You can reset Your Password here. Then You can use the new Password to login.
        {%- endtrans %}
    </p>
    <p>
        {% trans -%}
        	The new Password must have at least twelve Character from atleast three of four categories
            (Lowercase Letters, Uppercase Letters, Numbers and Special Characters).
            Also some Special Characters are disallowed.
        {%- endtrans %}
    </p>

    <form action="{{ cdedblink('core/do_password_reset')|e }}" method="POST" id="passwordresetform"
            class="form-horizontal">
        <div>
            {{ util.input_hidden(name="email") }}
            {{ util.input_hidden(name="cookie") }}
            {{ util.form_input_text(name="new_password", type="password", label=gettext("New Password"), small=True) }}
            {{ util.form_input_text(name="new_password2", type="password", label=gettext("Confirm new Password"), small=True) }}
            {{ util.form_input_submit(value=gettext("Reset Password"), small=True) }}
        </div>
    </form>
{% endblock %}
