{% set sidenav_active='core_change_log' %}
{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans -%}
    	Userdata Log
    {%- endtrans %}
    [{{ values['start']|int|e }}â€“{{ (values['start']|int + log|length)|e }}]
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("core/view_changelog_meta"), "Userdata Log", active="True") }}
{% endblock %}
{% block content %}
    <div class="p">
        {{ util.href("#logshowform", gettext("Go to Filter."), aclass="btn btn-info btn-sm", icon="search") }}
    </div>
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>{% trans -%}Timestamp{%- endtrans %}</th>
                <th>{% trans -%}Status{%- endtrans %}</th>
                <th>{% trans -%}Submitted By{%- endtrans %}</th>
                <th>{% trans -%}Reviewed By{%- endtrans %}</th>
                <th>{% trans -%}Affected{%- endtrans %}</th>
                <th>{% trans -%}Generation{%- endtrans %}</th>
                <th>{% trans -%}Additional Info{%- endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in log %}
                <tr>
                    <td>{{ entry['ctime']|datetime(lang=lang)|e }}</td>
                    <td>{{ gettext(enums['MemberChangeStati'](entry['change_status'])|string)|e }}</td>
                    <td>
                        {% if entry['submitted_by'] %}
                            {{ util.href(show_user_link(entry['submitted_by']),
                                    personas[entry['submitted_by']]['given_names']|e
                                    + " " + personas[entry['submitted_by']]['family_name']|e)
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['reviewed_by'] %}
                            {{ util.href(show_user_link(entry['reviewed_by']),
                                    personas[entry['reviewed_by']]['given_names']|e
                                    + " " + personas[entry['reviewed_by']]['family_name']|e)
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['persona_id'] %}
                            {{ util.href(show_user_link(entry['persona_id']),
                                    personas[entry['persona_id']]['given_names']|e
                                    + " " + personas[entry['persona_id']]['family_name']|e)
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>{{ entry['generation']|e }}</td>
                    <td>{{ entry['change_note']|e }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% call util.bootstrap_panel(title=gettext("Filter"), icon="search", aclass="panel-primary") %}
        <form action="{{ cdedblink('core/view_changelog_meta')|e }}" method="GET" id="logshowform"
          class="form-horizontal">
            {{ util.form_input_checkboxes("stati", label=gettext("Status"),
                    info=gettext("No selection means everything."),
                    entries=enums['MemberChangeStati1']|enum_entries(processing=gettext), small=True) }}
            {{ util.form_input_from_to('start', 'stop', label=gettext("Entries"), type='number', small=True) }}
            {{ util.form_input_submit(value=gettext("Apply"), small=True) }}
        </form>
    {% endcall %}
{% endblock %}
