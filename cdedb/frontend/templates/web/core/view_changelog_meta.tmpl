{% set sidenav_active='core_change_log' %}
{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% import "web/generic.tmpl" as generic with context %}
{% block title %}
    {% trans -%}
    	Userdata Log
    {%- endtrans %}
    [{{ values['start']|int }}â€“{{ (values['start']|int + log|length) }}]
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("core/view_changelog_meta"), gettext("Userdata Log"), active="True") }}
{% endblock %}
{% block content %}
    {% if log %}
        <div class="p">
            {{ util.href("#logshowform", gettext("Go to Filter."), aclass="btn btn-default btn-sm", icon="arrow-down") }}
        </div>
    {% endif %}
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>{% trans -%}Timestamp{%- endtrans %}</th>
                <th>{% trans -%}Status{%- endtrans %}</th>
                <th>{% trans -%}Submitted By{%- endtrans %}</th>
                <th>{% trans -%}Reviewed By{%- endtrans %}</th>
                <th>{% trans -%}Affected{%- endtrans %}</th>
                <th>{% trans -%}Generation{%- endtrans %}</th>
                <th>{% trans -%}Additional Info{%- endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in log %}
                <tr>
                    <td>{{ entry['ctime']|datetime(lang=lang) }}</td>
                    <td>{{ gettext(enums['MemberChangeStati'](entry['change_status'])|string) }}</td>
                    <td>
                        {% if entry['submitted_by'] %}
                            {{ util.href(show_user_link(entry['submitted_by']),
                                    personas[entry['submitted_by']]['given_names']
                                    + " " + personas[entry['submitted_by']]['family_name'])
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['reviewed_by'] %}
                            {{ util.href(show_user_link(entry['reviewed_by']),
                                    personas[entry['reviewed_by']]['given_names']
                                    + " " + personas[entry['reviewed_by']]['family_name'])
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        {% if entry['persona_id'] %}
                            {{ util.href(show_user_link(entry['persona_id']),
                                    personas[entry['persona_id']]['given_names']
                                    + " " + personas[entry['persona_id']]['family_name'])
                            }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>{{ entry['generation'] }}</td>
                    <td>{{ entry['change_note'] }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ generic.log_filter(cdedblink('core/view_changelog_meta'), enums['MemberChangeStati'], "persona_id") }}
{% endblock %}
