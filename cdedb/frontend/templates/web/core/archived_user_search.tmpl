{% set sidenav_active='core_manage_archive' %}
{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% import "web/generic.tmpl" as generic with context %}
{% set jshint='strong' %}
{% block scripts %}{{ util.cdedb_script('cdedb_queryform.js') }}{% endblock %}
{% block title %}
    {% trans -%}
        Search Archived Users
    {%- endtrans %}
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("core/archived_user_search"), gettext("Search Archived Users"), active="True") }}
{% endblock %}
{% block content %}
    {{ generic.place_default_queries("core/archived_user_search", default_queries) }}

    {{ generic.user_search_mask("archived", ("pevent_id",)) }}

    {% if values['is_search'] %}
        <h3>{% trans -%}Result{%- endtrans %} [{{ result|length }}]</h3>
        {{ generic.user_search_result(result, "archived") }}
    {% endif %}
{% endblock %}
