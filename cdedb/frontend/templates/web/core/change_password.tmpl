{% set sidenav_active='core_mydata' %}
{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans -%}
    	Change Password
    {%- endtrans %}
{% endblock %}
{% block breadcrumb %}
    {{ super() }}
    {{ util.breadcrumb_link(show_user_link(user['persona_id']), user['given_names'] + " " + user['family_name'],
            icon="user") }}
    {{ util.breadcrumb_link(cdedblink("core/change_password_form"), gettext("Change Password"), active=True) }}
{% endblock %}
{% block content %}
    <p>
        {% trans -%}
        	The new Password must have at least twelve Character from atleast three of four categories
            (Lowercase Letters, Uppercase Letters, Numbers and Special Characters).
            Also some Special Characters are disallowed.
        {%- endtrans %}
    </p>

    <form action="{{ cdedblink('core/change_password')|e }}" method="POST" id="passwordchangeform"
            class="form-horizontal">
        {{ util.form_input_text(name="old_password", label=gettext("Old Password"), type="password") }}
        {{ util.form_input_text(name="new_password", label=gettext("New Password"), type="password") }}
        {{ util.form_input_text(name="new_password2", label=gettext("Confirm new Password"), type="password") }}
        {{ util.form_input_submit(value=gettext("Confirm"), cancellink=show_user_link(user['persona_id'])) }}
    </form>
{% endblock %}
