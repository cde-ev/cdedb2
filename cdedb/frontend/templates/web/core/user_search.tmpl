{% set sidenav_active='core_manage_users' %}
{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% import "web/generic.tmpl" as generic with context %}
{% set jshint='strong' %}
{% block scripts %}
    {{ util.cdedb_script('queryform') }}
    {{ util.cdedb_script('search-persona') }}
    {{ util.cdedb_script('helper') }}
{% endblock %}
{% block title %}
    {% trans -%}
    	core_usermanagement
    {%- endtrans %}
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("core/user_search"), "Manage Users", active="True") }}
{% endblock %}
{% block content %}
    {{ generic.place_default_queries("core/user_search", default_queries) }}

    {{ generic.user_search_mask("core", ("pevent_id",)) }}

    {% if values['is_search'] %}
        <h3>{% trans -%}Result{%- endtrans %} [{{ result|length }}]</h3>
        {{ generic.user_search_result(result, "core") }}
    {% endif %}
{% endblock %}
