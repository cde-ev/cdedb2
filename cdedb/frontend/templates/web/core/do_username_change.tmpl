{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans -%}
    	Change Your E-Mail
    {%- endtrans %}
{% endblock %}
{% block content %}
    <p>
        {% trans email="<code>" + raw_email|e + "</code>" -%}
        	Enter Your Password and click "Confirm" to change Your E-Mail to {{ email }}.
            Aftwerwards you need to user Your new E-Mail to login.
        {%- endtrans %}
    </p>

    <form action="{{ cdedblink('core/do_username_change')|e }}" method="POST" id="usernamechangeform"
          class="form-horizontal">
        {{ util.input_hidden(name="new_username") }}
        {{ util.form_input_text(name="password", type="password", label=gettext("Password")) }}
        {{ util.form_input_submit(value=gettext("Confirm")) }}
    </form>
{% endblock %}
