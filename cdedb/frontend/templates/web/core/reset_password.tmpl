{% extends "web/core/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}Reset Password{% endblock %}
{% block content %}
    <p>
        {% trans -%}
        	If You have forgotten Your Password, You can request an E-Mail to reset it.
            To do this, just enter the E-Mail Address You would use to login.
        {%- endtrans %}
    </p>
    <p>
        {% trans -%}
        	Attention: This does not work for Admin-Accounts!
        {%- endtrans %}
    </p>

    <form action="{{ cdedblink('core/send_password_reset_link')|e }}" method="GET" id="passwordresetform"
            class="form-horizontal">
        <div>
            {{ util.form_input_text(name="email", label=gettext("E-Mail"), small=True) }}
            {{ util.form_input_submit(value=gettext("Request Reset Link"), small=True) }}
        </div>
    </form>
{% endblock %}
