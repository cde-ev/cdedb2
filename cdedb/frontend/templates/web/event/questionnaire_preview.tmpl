{% set sidenav_active='event_quest_preview' %}
{% extends "web/event/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% set jshint='weak' %}
{% block scripts %}{{ util.cdedb_script('helper') }}{% endblock %}
{% block title %}
    {% trans title=ambience['event']['title']|e -%}
        Questionnaire Preview (title)
    {%- endtrans %}
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("event/show_event"), ambience['event']['title'], icon="blackboard") }}
{{ util.breadcrumb_link(cdedblink("event/questionnaire_preview"), gettext("Questionnaire Preview"), active=True) }}
{% endblock %}
{% block heading %}
    <h1 class="title">
        {% trans -%}Questionnaire Preview{%- endtrans %}
        <small>{{ util.make_icon('blackboard') }} {{ ambience['event']['title']|e }}</small>
    </h1>
{% endblock %}
{% block content %}
    <form action="" method="POST" id="questionnairepreview" class="form-horizontal">
        {% for entry in questionnaire %}
            {# Field entry #}
            {% if entry['field_id'] %}
                {% with FIELD = ambience['event']['fields'][entry['field_id']] %}
                    {% if FIELD['entries'] %}
                        {{ util.form_input_select(name=FIELD['field_name'], entries=FIELD['entries'],
                                                  label=entry['title'], info=entry['info'],
                                                  readonly=(entry['readonly'] or is_locked)) }}
                    {% else %}
                        {% if FIELD['kind'] == "bool" %}
                            {{ util.form_input_checkbox(
                                name=FIELD['field_name'], label=entry['title'], info=entry['info'],
                                readonly=(entry['readonly'] or is_locked)) }}
                        {% elif FIELD['kind'] == "str"  %}
                            {% if entry['input_size'] %}
                                {{ util.form_input_textarea(
                                    name=FIELD['field_name'], label=entry['title'], info=entry['info'],
                                    readonly=(entry['readonly'] or is_locked),
                                    rows=(1+entry['input_size']*2)) }}
                            {% else %}
                                {{ util.form_input_text(
                                    name=FIELD['field_name'], label=entry['title'], info=entry['info'],
                                    readonly=(entry['readonly'] or is_locked)) }}
                            {% endif %}
                        {% else %}
                            {{ util.form_event_field_input(
                                FIELD, name=FIELD['field_name'], label=entry['title'], info=entry['info'],
                                readonly=(entry['readonly'] or is_locked)) }}
                        {% endif %}
                    {% endif %}
                {% endwith %}

            {# Text-only entry #}
            {% else %}
                {% if entry['title'] %}
                    <h3 class="heading-underline">{{ entry['title']|e }}</h3>
                {% endif %}
                {% if entry['info'] %}
                    {{ entry['info']|rst }}
                {% endif %}
            {% endif %}
        {% endfor %}
    </form>
    <script type="text/javascript">
        $('#questionnaireform').cdedbProtectChanges();
    </script>
{% endblock %}
