{% set sidenav_active='event_event_log' %}
{% extends "web/event/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans title=ambience['event']['title'] -%}
    	{{ title }} Log
    {%- endtrans %}
    [{{ values['start']|int }}–{{ (values['start']|int + log|length) }}]
{% endblock %}
{% block heading %}
    <h1 class="title">
        {% trans -%}Log{%- endtrans %}
        <small>{{ util.make_icon('blackboard') }} {{ ambience['event']['title'] }}</small>
    </h1>
{% endblock %}
{% block breadcrumb %}
    {{ super() }}
    {{ util.breadcrumb_link(cdedblink("event/show_event"), ambience['event']['title'], icon='blackboard') }}
    {{ util.breadcrumb_link(cdedblink("event/view_event_log"), gettext("Log"), active="True") }}
{% endblock %}
{% block content %}
    <div class="p">
        {{ util.href("#logshowform", gettext("Go to Filter."), aclass="btn btn-info btn-sm", icon="search") }}
    </div>
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>{% trans -%}Timestamp{%- endtrans %}</th>
                <th>{% trans -%}Code{%- endtrans %}</th>
                <th>{% trans -%}Submitted By{%- endtrans %}</th>
                <th>{% trans -%}Affected{%- endtrans %}</th>
                <th>{% trans -%}Additional Info{%- endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entry in log %}
            <tr>
                <td>{{ entry['ctime']|datetime(lang=lang) }}</td>
                <td>{{ gettext(enums['EventLogCodes'](entry['code'])|string) }}</td>
                <td>
                    {% if entry['submitted_by'] %}
                        {{ util.persona_anchor(personas[entry['submitted_by']], event_id=ambience['event']['id']) }}
                    {% else %}
                        –
                    {% endif %}
                </td>
                <td>
                    {% if entry['persona_id'] %}
                        {{ util.persona_anchor(personas[entry['persona_id']], event_id=ambience['event']['id']) }}
                    {% else %}
                        –
                    {% endif %}
                </td>
                <td>{{ entry['additional_info'] }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% call util.bootstrap_panel(title=gettext("Filter"), icon="search", aclass="panel-primary") %}
        <form action="{{ cdedblink('event/view_event_log') }}" method="GET" id="logshowform" class="form-horizontal">
            {{ util.form_input_checkboxes("codes", label=gettext("Categories"), info=gettext("No selection means everything."),
                                          entries=enums['EventLogCodes']|enum_entries(processing=gettext),
                                          small=True) }}
            {{ util.form_input_from_to('start', 'stop', label=gettext("Entries"), type='number', small=True) }}
            {{ util.form_input_submit(value=gettext("Apply"), small=True) }}
        </form>
    {% endcall %}
{% endblock %}
