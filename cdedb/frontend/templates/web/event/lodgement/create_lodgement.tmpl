{% set sidenav_active='event_lodgements' %}
{% extends "web/event/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% import "web/event/generic.tmpl" as generic_event with context %}
{% block scripts %}{{ util.cdedb_script('cdedb_helper.js') }}{% endblock %}
{% set jshint='weak' %}
{% block title %}
    {% trans title=ambience['event']['title'] %}
    	Create Lodgement ({{ title }})
    {% endtrans %}
{% endblock %}
{% block breadcrumb %}
    {{ super() }}
    {{ util.breadcrumb_link(cdedblink("event/show_event"), ambience['event']['title'], icon="chalkboard-teacher") }}
    {{ util.breadcrumb_link(cdedblink("event/lodgements"), gettext("Lodgements")) }}
    {{ util.breadcrumb_link(cdedblink("event/create_lodgement"), gettext("Create Lodgement"), active=True) }}
{% endblock %}
{% block heading %}
    {{ util.context_heading(gettext("Create Lodgement"), ambience['event']['title'], 'chalkboard-teacher', gettext("Event")) }}
{% endblock %}
{% block content %}
    <form action="{{ cdedblink('event/create_lodgement') }}" method="POST" id="createlodgementform"
          class="form-horizontal">
        {{ util.anti_csrf_token('event/create_lodgement') }}
        <h4 class="heading-underline">{% trans %}Lodgement{% endtrans %}</h4>
        {{ util.form_input_text(name="title", label=gettext("Title_[[name of an entity]]")) }}
        {{ util.form_input_text(name="regular_capacity", label=gettext("Regular Capacity"), type="number") }}
        {{ util.form_input_text(name="camping_mat_capacity", label=gettext("Camping Mat Capacity"), type="number") }}
        {{ util.form_input_select(name="group_id", entries=groups.items(),
                                  label=gettext("Lodgement Group"), nulloption=nbsp, sort=True) }}
        {{ util.form_input_textarea(name="notes", label=gettext("Notes"), rows="5") }}

        <h4 class="heading-underline">{% trans %}Fields{% endtrans %}</h4>
        {% for field_id, field in ambience['event']['fields']|keydictsort(EntitySorter.event_field)
                if field['association'] == enums['FieldAssociations'].lodgement %}
            {{ generic_event.form_field_input(field) }}
        {% else %}
            <p class="text-muted">{% trans %}No custom fields for lodgements available.{% endtrans %}</p>
        {% endfor %}
        {{ util.form_input_submit(label=gettext("Create"), cancellink=cdedblink("event/lodgements")) }}
    </form>
    <script nonce="{{ csp_nonce }}">
        $('#createlodgementform').cdedbProtectChanges();
    </script>
{% endblock %}
