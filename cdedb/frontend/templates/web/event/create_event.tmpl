{% set sidenav_active='event_list' %}
{% extends "web/event/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block scripts %}{{ util.cdedb_script('search-persona') }}{{ util.cdedb_script('helper') }}{% endblock %}
{% set jshint='strong' %}
{% block title %}Veranstaltung anlegen{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("event/list_db_events"), "Veranstaltungen verwalten") }}
{{ util.breadcrumb_link(cdedblink("event/create_event"), "Veranstaltung anlegen", active=True) }}
{% endblock %}
{% block content %}
    {% call util.bootstrap_panel(aclass="panel-warning") %}
        TODO Kursschienen
    {% endcall %}
    <form action="{{ cdedblink('event/create_event')|e }}" method="POST" id="createeventform" class="form-horizontal">
        {{ util.form_input_text(name="title", label="Titel") }}
        {{ util.form_input_select(name="institution", label="Organisation", entries=institutions|dictsort) }}
        {{ util.form_input_textarea(name="description", label="Beschreibung", rows="5") }}
        {{ util.form_input_text(name="shortname", label="Kürzel") }}
        {{ util.form_input_text(name="event_begin", label="Veranstaltungsbeginn", type="date",
                                placeholder="YYYY-MM-DD") }}
        {{ util.form_input_text(name="event_end", label="Veranstaltungsende", type="date",
                                placeholder="YYYY-MM-DD") }}
        {{ util.form_input_text(name="registration_start", label="Anmeldebeginn", type="datetime-local",
                                placeholder="YYYY-MM-DD HH:MM:SS") }}
        {{ util.form_input_text(name="registration_soft_limit", label="offizieller Anmeldeschluss", type="datetime-local",
                                placeholder="YYYY-MM-DD HH:MM:SS") }}
        {{ util.form_input_text(name="registration_hard_limit", label="tatsächlicher Anmeldeschluss", type="datetime-local",
                                placeholder="YYYY-MM-DD HH:MM:SS") }}
        {{ util.form_input_select(name="iban", label="CdE-Konto IBAN", entries=(
            ("DE96 3702 0500 0008 0689 01", "DE96 3702 0500 0008 0689 01"),
            ("DE96 3702 0500 0008 0689 02", "DE96 3702 0500 0008 0689 02")), nulloption="") }}
        {{ util.form_input_textarea(name="mail_text", label="Freitext Anmeldungsbestätigung", rows="5") }}
        {{ util.form_input_textarea(name="notes", label="Admin/Orga-Notizen", rows="5") }}
        {{ util.form_input_text(name="orga_ids", label="Orgas", placeholder="DB-XXXX-X,DB-XXXX-X,…",
            anid="input-orgas") }}
        <script type="text/javascript">
            $('#input-orgas').cdedbSearchPerson(
                '{{ cdedblink('core/select_persona') + '?kind=admin_persona&phrase=%s&sphere=event'}}',
                [],
                false,
                true,
                "CdEDB-ID, Name oder E-Mail"
            );
        </script>
        {{ util.input_hidden(name="use_questionnaire", value=False) }}
        {{ util.form_input_submit(value="Veranstaltung anlegen", cancellink=cdedblink("event/list_db_events")) }}
    </form>
    <script type="text/javascript">
        $('#createeventform').cdedbProtectChanges();
    </script>
{% endblock %}
