{% set sidenav_active='event_fees' %}
{% extends "web/event/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block scripts %}
    {{ util.cdedb_script('cdedb_helper.js') }}
{% endblock %}
{% set jshint='weak' %}

{% block title %}
    {% if ambience['fee'] %}
        {% trans fee_title=ambience['fee']['title'], event_title=ambience['event']['title'] %}
            Edit fee {{ fee_title }} ({{ event_title }})
        {% endtrans %}
    {% else %}
        {% if personalized %}
            {% trans event_title=ambience['event'].title %}
                Add Personalized Fee ({{ event_title }})
            {% endtrans %}
        {% else %}
            {% trans event_title=ambience['event']['title'] %}
                Add Conditional Fee ({{ event_title }})
            {% endtrans %}
        {% endif %}
    {% endif %}
{% endblock %}

{% block heading %}
    {{ util.doclink_("Handbuch_Orga_Teilnahmebeitraege") }}
    {% if ambience['fee'] %}
        {{ util.context_heading(gettext("Change fee %(fee_title)s")|format(fee_title=ambience['fee']['title']),
                                ambience['event']['title'], 'chalkboard-teacher', gettext("Event")) }}
    {% else %}
        {{ util.context_heading(gettext("Add Fee"),
                                ambience['event']['title'], 'chalkboard-teacher', gettext("Event")) }}
    {% endif %}
{% endblock %}

{% block breadcrumb %}
    {{ super() }}
    {{ util.breadcrumb_link(cdedblink("event/show_event"), ambience['event']['title'], icon="chalkboard-teacher") }}
    {{ util.breadcrumb_link(cdedblink("event/fee_summary"), gettext("Fees")) }}
    {% if ambience['fee'] %}
        {{ util.breadcrumb_link("", ambience['fee']['title'], icon="coins", readonly=True) }}
        {{ util.breadcrumb_link(cdedblink("event/configure_fee"), gettext("Change"), active=True) }}
    {% elif personalized %}
        {{ util.breadcrumb_link(cdedblink("event/configure_fee"), gettext("Add Personalized Fee"), active=True) }}
    {% else %}
        {{ util.breadcrumb_link(cdedblink("event/configure_fee"), gettext("Add Conditional Fee"), active=True) }}
    {% endif %}
{% endblock %}

{% block content %}

    {% if ambience['registration'] %}
        {% set action = 'event/add_new_personalized_fee' %}
    {% else %}
        {% set action = 'event/configure_fee' %}
    {% endif %}

    <form action="{{ cdedblink(action) }}" method="POST" id="configureeventfeeform" class="form-horizontal">
        {{ util.anti_csrf_token(action) }}
        {{ util.form_input_text(name="title", label=gettext("Title")) }}
        {{ util.form_input_select(name="kind", label=gettext("Type"), entries=enums['EventFeeType']|enum_entries(processing=gettext)) }}
        {{ util.form_input_textarea(name="notes", label=gettext("Notes")) }}
        {{ util.input_hidden(name="personalized", value=personalized) }}
        {% if ambience['registration'] %}
            <hr />
            {{ util.form_input_static(gettext("Initially affected Registrations"), value=util.href('event/show_registration', util.persona_name(persona))) }}
            {{ util.form_input_static(value=gettext("Set initial personalized amount to:")) }}
            {{ util.form_input_text(
                    type="number", name="amount", addon="€", attributes='step="0.01"'|s, label=gettext("Amount")) }}
        {% elif not personalized %}
            {{ util.form_input_text(type="number", name="amount", label=gettext("Amount"), addon='€', attributes='step="0.01"'|s) }}
            {{ util.form_input_text(name="condition", label=gettext("Condition")) }}
        {% endif %}

        {{ util.form_input_submit(label=gettext("Save"), cancellink=cdedblink("event/fee_summary")) }}
    </form>

    <script nonce="{{ csp_nonce }}">
        $('#configureeventfeeform').cdedbProtectChanges();
    </script>
{% endblock %}
