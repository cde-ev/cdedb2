{% set sidenav_active='event_lodgements' %}
{% extends "web/event/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block scripts %}{{ util.cdedb_script('cdedb_helper.js') }}{% endblock %}
{% set jshint='weak' %}
{% block title %}
    {% trans lodgement=ambience['lodgement']['moniker'], event=ambience['event']['title'] %}
        Edit Lodgement {{ lodgement }} ({{ event }})
    {% endtrans %}
{% endblock %}
{% block breadcrumb %}
    {{ super() }}
    {{ util.breadcrumb_link(cdedblink("event/show_event"), ambience['event']['title'], icon="glyphicon-blackboard") }}
    {{ util.breadcrumb_link(cdedblink("event/lodgements"), gettext("Lodgements")) }}
    {{ util.breadcrumb_link(cdedblink("event/show_lodgement"), ambience['lodgement']['moniker'], icon='glyphicon-home') }}
    {{ util.breadcrumb_link(cdedblink("event/change_lodgement"), gettext("Edit"), active=True) }}
{% endblock %}
{% block heading %}
    <h1 class="title">
        {% trans lodgement=ambience['lodgement']['moniker'] %}Edit Lodgement {{ lodgement }}{% endtrans %}
        <small>{{ util.make_icon('chalkboard-teacher') }} {{ ambience['event']['title'] }}</small>
    </h1>
{% endblock %}
{% block content %}
    <form action="{{ cdedblink('event/change_lodgement') }}" method="POST" id="changelodgementform"
          class="form-horizontal">
        {{ util.anti_csrf_token('event/change_lodgement') }}
        {{ util.form_input_text(name="moniker", label=gettext("Moniker")) }}
        {{ util.form_input_text(name="capacity", label=gettext("Regular Capacity")) }}
        {{ util.form_input_text(name="reserve", label=gettext("Camping Mat Capacity")) }}
        {{ util.form_input_select(name="group_id", entries=groups, label=gettext("Lodgement Group"),
                                  nulloption="") }}
        {{ util.form_input_textarea(name="notes", label=gettext("Notes"), rows="5") }}

        <h4 class="heading-underline">{% trans %}Fields{% endtrans %}</h4>
        {% for field_id, field in ambience['event']['fields']|keydictsort(EntitySorter.event_field)
            if field['association'] == enums['FieldAssociations'].lodgement %}
            {{ util.form_event_field_input(field) }}
        {% else %}
            <p class="text-muted">{% trans %}No custom fields for lodgements available.{% endtrans %}</p>
        {% endfor %}
        {{ util.form_input_submit(value=gettext("Save"), cancellink=cdedblink("event/show_lodgement")) }}
    </form>
    <script type="text/javascript" nonce="{{ csp_nonce }}">
        $('#changelodgementform').cdedbProtectChanges();
    </script>
{% endblock %}
