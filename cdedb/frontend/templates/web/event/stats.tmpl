{% set sidenav_active='event_stats' %}
{% extends "web/event/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block title %}
    {% trans title=ambience['event']['title']-%}
    	Participant Statistics {{ title }}
    {%- endtrans %}
{% endblock %}
{% block breadcrumb %}
{{ super() }}
{{ util.breadcrumb_link(cdedblink("event/show_event"), ambience['event']['title'], icon="blackboard") }}
{{ util.breadcrumb_link(cdedblink("event/stats"), gettext("Participant Statistics"), active=True) }}
{% endblock %}
{% block heading %}
    <h1 class="title">
        {% trans -%}Statistics{%- endtrans %}
        <small>{{ util.make_icon('blackboard') }} {{ ambience['event']['title'] }}</small>
    </h1>
{% endblock %}
{% block content %}
    <h3>{% trans -%}Participant Statistics{%- endtrans %}</h3>
    {% with HEADINGS = {
        'total': gettext("Total Registrations"),
        'pending': gettext("Open Registrations"),
        'participant': gettext("Participants"),
        ' u18': gettext("U18"),
        ' u16': gettext("U16"),
        ' u14': gettext("U14"),
        ' checked in': gettext("Checked-In"),
        ' not checked in': gettext("Not Checked-In"),
        ' orgas': gettext("Orgas"),
        'waitlist': gettext("Waitinglist"),
        'guest': gettext("Guests"),
        'total involved': gettext("Total Active Registrations"),
        ' not payed': gettext("Not Paid"),
        ' payed': gettext("Paid"),
        ' no parental agreement': gettext("Parental Consent Pending"),
        'no lodgement': gettext("No Lodgement"),
        'cancelled': gettext("Registration Cancelled"),
        'rejected': gettext("Rejected"),
    } %}
        <table class="table table-slim table-condensed">
            <thead>
                <tr>
                    <th colspan="2"></th>
                    {% for part_id, part in ambience['event']['parts']|xdictsort('part_begin') %}
                        <th>
                            {% if ambience['event']['parts']|length > 1 %}
                                {{ part['title'] }}
                            {% else %}
                                {% trans -%}Count{%- endtrans %}
                            {% endif %}
                        </th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for key, row in per_part_statistics.items() %}
                    <tr>
                        {% if key.startswith(" ") %}
                            <th class="indent"></th>
                            <th>{{ HEADINGS.get(key, key) }}</th>
                        {% else %}
                            <th colspan="2">{{ HEADINGS.get(key, key) }}</th>
                        {% endif %}
                        {% for part_id, datum in row|dictsort %}
                            <td>
                                {% set query = get_query(key, part_id) %}
                                {% if query %}
                                    {{ util.href(cdedblink('event/registration_query', query|querytoparams), datum) }}
                                {% else %}
                                    {{ datum }}
                                {% endif %}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endwith %}
    {% if ambience['event']['tracks'] %}
        <h3>Kursteilnehmer-Statistik</h3>
        {% with HEADINGS = {
            'all instructors': gettext("(potential) Instructor"),
            'instructors': gettext("Instructor"),
            'attendees': gettext("Attendees"),
        } %}
        {# TODO move headings into translation and translate in python code #}
            <table class="table table-condensed table-slim">
                <thead>
                    <tr>
                        <th></th>
                        {% for track_id, track in ambience['event']['tracks']|xdictsort('sortkey') %}
                            <th>
                                {% if ambience['event']['tracks']|length > 1 %}
                                    {{ track['title'] }}
                                {% else %}
                                    {% trans -%}Count{%- endtrans %}
                                {% endif %}
                            </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for key, row in per_track_statistics.items() %}
                        <tr>
                            <th>{{ HEADINGS.get(key, key) }}</th>
                                {% for track_id, track in ambience['event']['tracks']|xdictsort('sortkey') %}
                                <td>
                                    {% set query = get_query(key, track['part_id'], track_id) %}
                                    {% if query %}
                                        {{ util.href(cdedblink('event/registration_query', query|querytoparams),
                                                     row[track_id]) }}
                                    {% else %}
                                        {{ row[track_id] }}
                                    {% endif %}
                                </td>
                                {% endfor %}
                        </tr>
                    {% endfor %}
                <tbody>
            </table>
        {% endwith %}
    {% endif %}

    <hr />

    <div class="row">
        {% for key, heading in (  ) %} {# Add titles for filtered lists of participants by event part here #}
            <div class="col-md-6">
                <h3>{{ heading }}</h3>
                {% for part_id, part in ambience['event']['parts']|xdictsort('part_begin') %}
                    <h4>{{ part['title'] }} ({{ per_part_listings[key][part_id]|length }})</h4>
                    {% if 3*(per_part_listings[key][part_id]|length) < registrations|length %}
                        <ul>
                            {% for registration_id in per_part_listings[key][part_id] %}
                                <li>
                                    {% with ud = personas[registrations[registration_id]['persona_id']] %}
                                        {{ util.href(cdedblink("event/show_registration",
                                                               {'registration_id': registration_id}),
                                                     "{} {}".format(ud['given_names'], ud['family_name'])) }}
                                    {% endwith %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted">{% trans -%}At least a third.{%- endtrans %}</p>
                    {% endif %}
                {% endfor %}
            </div>
        {% endfor %}
        {% if ambience['event']['tracks'] %}
            {% for key, heading in (
                ('wrong choice', gettext("Assigned to unchosen Course")),) %}

                <div class="col-md-6">
                    <h3>{{ heading }}</h3>
                    {% for track_id, track in ambience['event']['tracks']|xdictsort('sortkey') %}
                        <h4>{{ track['title'] }} ({{ per_track_listings[key][track_id]|length }})</h4>
                        {% if 3*(per_track_listings[key][track_id]|length) < registrations|length %}
                            <ul>
                                {% for registration_id in per_track_listings[key][track_id] %}
                                    <li>
                                        {% with ud = personas[registrations[registration_id]['persona_id']] %}
                                            {{ util.href(cdedblink("event/show_registration",
                                                                   {'registration_id': registration_id}),
                                                         "{} {}".format(ud['given_names'], ud['family_name'])) }}
                                        {% endwith %}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-muted">{% trans -%}At least a third.{%- endtrans %}</p>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
