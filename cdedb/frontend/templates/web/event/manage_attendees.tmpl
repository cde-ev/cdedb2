{% extends "web/event/base.tmpl" %}
{% set sidenav_active='event_course_stats' %}
{% import "web/util.tmpl" as util with context %}
{% block scripts %}{{ util.cdedb_script('manage_participants') }}{% endblock %}
{% set jshint='strong' %}
{% block title %}
    {% trans course=ambience['course']['title']|e, title=ambience['event']['title']|e -%}
    	Manage Attendees of Course {{ course }} ({{ title }})
    {%- endtrans %}
{% endblock %}
{% block breadcrumb %}
    {{ super() }}
    {{ util.breadcrumb_link(cdedblink("event/show_event"), ambience['event']['title'], icon="blackboard") }}
    {{ util.breadcrumb_link(cdedblink("event/course_stats"), gettext("Courses")) }}
    {{ util.breadcrumb_link(cdedblink("event/show_course"), ambience['course']['shortname'], icon='book') }}
    {{ util.breadcrumb_link(cdedblink("event/manage_attendees"), gettext("Manage Attendees"), active=True) }}
{% endblock %}
{% block heading %}
    <h1 class="title">
        {% trans course=ambience['course']['shortname']|e -%}
            Attendees of {{ course }}
        {%- endtrans %}
        <small>{{ util.make_icon('blackboard', arialabel="Veranstaltung") }} {{ ambience['event']['title']|e }}</small>
    </h1>
{% endblock %}
{% block content %}
    <form action="{{ cdedblink('event/manage_attendees')|e }}" method="POST" id="manageattendeesform">
        <div class="row">
            {% for track_id, track in ambience['event']['tracks']|xdictsort('sortkey')
                    if track_id in ambience['course']['segments'] %}
                <div class="col-md-6">
                    {% call util.bootstrap_panel(title=(track['title'] if ambience['event']['tracks']|length > 1
                                                                       else gettext("Assigned Attendees")),
                                                 aclass="panel-info") %}
                        <ul class="slim">
                            {% for registration_id in attendees[(ambience['course']['id'], track_id)] %}
                                <li>
                                    {{ personas[registrations[registration_id]['persona_id']]['given_names']|e }}
                                    {{ personas[registrations[registration_id]['persona_id']]['family_name']|e }}
                                    &ensp;{{ util.input_checkbox('delete_'+track_id|e+'_'+registration_id|e,
                                            gettext("Remove"), aclass="del-box") }}
                                </li>
                            {% else %}
                                <li class="text-muted">
                                    {% trans -%}There are currently no attendees assigned.{%- endtrans %}
                                </li>
                            {% endfor %}
                        </ul>

                        <label for="input_new_{{ track_id|e }}">
                            {{ util.make_icon('plus') }} {% trans -%}Add Attendee{%- endtrans %}
                        </label>
                        <select multiple="multiple" id="input_new_{{ track_id|e }}" class="form-control"
                                name="new_{{ track_id|e }}">
                            <option value="">{% trans -%}– none –{%- endtrans %}</option>
                            {% for registration_id in without_course[track_id] %}
                                <option id="{{ registration_id|e }}_{{ track_id|e }}" value="{{ registration_id|e }}">
                                    {{ personas[registrations[registration_id]['persona_id']]['given_names']|e }}
                                    {{ personas[registrations[registration_id]['persona_id']]['family_name']|e }}
                                </option>
                            {% endfor %}
                        </select>
                    {% endcall %}
                </div>
            {% endfor %}
            <script type="text/javascript">
                var course_names = {{ course_names|json }};
                {% for track_id in ambience['event']['tracks'] %}
                    $('#input_new_{{ track_id }}').cdedbSearchParticipant(
                        {{ selectize_data[track_id]|json }}, course_names, "{{ gettext("currently") }}: ");
                {% endfor %}
                $('.del-box').cdedbRemoveParticipantButton('{{ gettext("Remove Attendee") }}');
            </script>
        </div>
        {{ util.input_submit(value=gettext("Save")) }}&emsp;
        {{ util.href(cdedblink('event/show_course'), gettext("Cancel"), icon='remove', aclass="btn btn-default") }}
    </form>
{% endblock %}
