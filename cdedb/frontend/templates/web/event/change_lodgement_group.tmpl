{% set sidenav_active='event_lodgements' %}
{% extends "web/event/base.tmpl" %}
{% import "web/util.tmpl" as util with context %}
{% block scripts %}{{ util.cdedb_script('cdedb_helper.js') }}{% endblock %}
{% set jshint='weak' %}
{% block title %}
    {% trans title=ambience['group']['moniker'] -%}
    	Edit Lodgement Group ({{ moniker }})
    {%- endtrans %}
{% endblock %}
{% block breadcrumb %}
    {{ super() }}
    {{ util.breadcrumb_link(cdedblink("event/show_event"), ambience['event']['title'], icon="blackboard") }}
    {{ util.breadcrumb_link(cdedblink("event/lodgements"), gettext("Lodgements")) }}
    {{ util.breadcrumb_link(cdedblink("event/change_lodgement_group"), gettext("Edit Lodgement Group"), active=True) }}
{% endblock %}
{% block heading %}
    <h1 class="title">
        {% trans moniker=ambience['group']['moniker'] -%}Edit Lodgement Group {{ moniker }}{%- endtrans %}
        <small>{{ util.make_icon('blackboard') }} {{ ambience['event']['title'] }}</small>
    </h1>
{% endblock %}
{% block content %}
    <form action="{{ cdedblink('event/change_lodgement_group') }}" method="POST" id="changelodgementgroupform"
          class="form-horizontal">
        {{ util.anti_csrf_token('event/change_lodgement_group') }}
        <h4 class="heading-underline">{% trans -%}Lodgement Group{%- endtrans %}</h4>
        {{ util.form_input_text(name="moniker", label=gettext("Moniker")) }}
        {{ util.form_input_submit(value=gettext("Save"), cancellink=cdedblink("event/lodgements")) }}
    </form>
    <script type="text/javascript" nonce="{{ csp_nonce }}">
        $('#changelodgementgroupform').cdedbProtectChanges();
    </script>
{% endblock %}
