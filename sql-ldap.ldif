# set log level to debug
dn: cn=config
changetype: modify
replace: olcLogLevel
olcLogLevel: -1

# load sql-backend module
dn: cn=module{0},cn=config
changetype: modify
add: olcModuleLoad
olcModuleLoad: back_sql

